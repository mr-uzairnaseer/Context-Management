<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:constantSize="true">
    <item android:state_enabled="true">
        <ripple android:color="@color/white">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/positive"/>
                    <corners android:radius="2dp"/>
                    <padding
                        android:left="8dp"
                        android:right="8dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <ripple android:color="@color/background_green_grey_dark">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/canvas"/>
                    <corners android:radius="2dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/background_green_grey_dark"/>
                    <padding
                        android:left="8dp"
                        android:right="8dp"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>
