<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/btn_white_ripple">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_white_disabled"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_white_selected"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_white_normal"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
