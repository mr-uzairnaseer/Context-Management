<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/layout_navigation_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="@dimen/navigation_settings_landscape_margin_sides"
        android:paddingTop="24dp"
        android:paddingRight="@dimen/navigation_settings_landscape_margin_sides"
        android:paddingBottom="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textSize="@dimen/navigation_settings_landscape_header_text_size"
            android:textColor="@color/black"
            android:id="@+id/textview_header"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/map_setting_header_navigation_instructions"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:textIsSelectable="false"
            android:fontFamily="?attr/fontRegular"/>
        <ImageView
            android:id="@+id/imageview_voice"
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_volume_max"
            android:scaleType="centerInside"
            android:layout_below="@+id/textview_header"
            android:layout_alignParentStart="true"
            app:tint="@color/main_grey"/>
        <TextView
            android:textSize="@dimen/navigation_settings_landscape_item_text_size"
            android:textColor="@color/text_underline"
            android:gravity="center_vertical"
            android:id="@+id/textview_voice"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/map_setting_nav_voice"
            android:layout_below="@+id/textview_header"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="@dimen/default_margin_and_padding"
            android:layout_toStartOf="@+id/radiobutton_voice"
            android:layout_toEndOf="@+id/imageview_voice"/>
        <RadioButton
            android:id="@+id/radiobutton_voice"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/textview_header"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/imageview_notifications"
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_bell"
            android:scaleType="centerInside"
            android:layout_below="@+id/imageview_voice"
            android:layout_alignParentStart="true"
            app:tint="@color/main_grey"/>
        <TextView
            android:textSize="@dimen/navigation_settings_landscape_item_text_size"
            android:textColor="@color/text_underline"
            android:gravity="center_vertical"
            android:id="@+id/textview_notifications"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/map_setting_nav_notifications"
            android:layout_below="@+id/imageview_voice"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="@dimen/default_margin_and_padding"
            android:layout_toStartOf="@+id/radiobutton_notifications"
            android:layout_toEndOf="@+id/imageview_notifications"/>
        <RadioButton
            android:id="@+id/radiobutton_notifications"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/imageview_voice"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/imageview_mute"
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_nav_mute"
            android:scaleType="centerInside"
            android:layout_below="@+id/imageview_notifications"
            android:layout_alignParentStart="true"
            app:tint="@color/main_grey"/>
        <TextView
            android:textSize="@dimen/navigation_settings_landscape_item_text_size"
            android:textColor="@color/text_underline"
            android:gravity="center_vertical"
            android:id="@+id/textview_mute"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/map_setting_nav_mute"
            android:layout_below="@+id/imageview_notifications"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="@dimen/default_margin_and_padding"
            android:layout_toStartOf="@+id/radiobutton_mute"
            android:layout_toEndOf="@+id/imageview_mute"/>
        <RadioButton
            android:id="@+id/radiobutton_mute"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/imageview_notifications"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/imageview_auto_screen_on"
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:src="0x7f080cb4"
            android:scaleType="centerInside"
            android:layout_below="@+id/imageview_mute"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="@dimen/navigation_settings_landscape_item_text_size"
            android:textColor="@color/text_underline"
            android:gravity="center_vertical"
            android:id="@+id/textview_auto_screen_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:minHeight="24dp"
            android:text="@string/map_settings_auto_screen_on"
            android:layout_below="@+id/textview_mute"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="@dimen/default_margin_and_padding"
            android:layout_toStartOf="@+id/switch_auto_screen_on"
            android:layout_toEndOf="@+id/imageview_mute"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/text_underline"
            android:gravity="center_vertical"
            android:id="@+id/textview_auto_screen_on_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/map_settings_auto_screen_on_hint"
            android:layout_below="@+id/textview_auto_screen_on"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="@dimen/default_margin_and_padding"
            android:layout_toStartOf="@+id/switch_auto_screen_on"
            android:layout_toEndOf="@+id/imageview_mute"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_auto_screen_on"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/imageview_mute"
            android:layout_alignParentEnd="true"/>
        <Button
            android:textSize="16sp"
            android:textColor="@color/secondary"
            android:gravity="center"
            android:id="@+id/button_done"
            android:background="@android:color/transparent"
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:text="@string/map_setting_done"
            android:layout_alignParentBottom="true"
            android:fontFamily="?attr/fontRegular"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
