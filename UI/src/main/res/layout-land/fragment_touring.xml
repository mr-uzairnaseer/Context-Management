<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:theme="@style/KmtActionBarStyle"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_weight="0"
        android:elevation="0dp"
        app:popupTheme="@style/KmtToolbarPopupStyle"
        app:titleTextAppearance="@style/TextAppearance.Komoot.Theme2.Label01Medium"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/layout_holder_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ViewStub
                android:id="@+id/map_stub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:id="@+id/layout_content_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_map"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="false">
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_close_navigation"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:elevation="3dp"
                android:layout_marginHorizontal="24dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_x_close"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_holder"
                android:clipChildren="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_alignParentEnd="true"
                android:elevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.4">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_top_panel_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:id="@+id/paused_activity_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="12dp"
                            app:cardBackgroundColor="@color/action_base_fill_accent_orange_default"
                            app:cardCornerRadius="120dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView
                                android:textColor="@color/text_white_default"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/touring_label_activity_paused"
                                android:layout_marginHorizontal="14dp"
                                android:layout_marginVertical="8dp"
                                style="@style/TextAppearance.Komoot.Theme2.Label03Bold"/>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <FrameLayout
                    android:id="@+id/layout_bottom_panel_visibility_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.komoot.android.view.SwipeDownLinearLayout
                        android:orientation="vertical"
                        android:id="@+id/layout_bottom_panel_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:id="@+id/full_screen_toggle"
                            android:background="@color/surface_fill_white_default"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:text="â–²"
                            android:fontFamily="?attr/fontRegular"/>
                    </de.komoot.android.view.SwipeDownLinearLayout>
                </FrameLayout>
                <de.komoot.android.ui.touring.view.MapBottomBarMenuView
                    android:id="@+id/bottom_menu_bar"
                    android:visibility="gone"
                    android:clipChildren="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/layout_map_side_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:elevation="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.5"/>
            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/heatmap_button_stack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/mapControlView"
                app:layout_constraintLeft_toRightOf="@+id/mapControlView"/>
            <ImageView
                android:id="@+id/map_attribution_info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_info_circle"
                android:contentDescription=""
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/layout_map_scale"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/layout_map_scale"/>
            <de.komoot.android.view.MapScale
                android:gravity="center_horizontal"
                android:id="@+id/layout_map_scale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/bottom_bar_content_holder_spacer"
                app:layout_constraintLeft_toRightOf="@+id/map_attribution_info"/>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/textview_btn_recenter"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/action_base_fill_accent_orange_default"
                app:cardCornerRadius="120dp"
                app:layout_constraintBottom_toTopOf="@+id/layout_map_scale"
                app:layout_constraintEnd_toStartOf="@+id/layout_holder"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/touring_btn_recenter"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/ic_navigation_pointer_02"
                    android:fontFamily="?attr/fontBold"
                    android:paddingHorizontal="13dp"
                    android:paddingVertical="13dp"/>
            </androidx.cardview.widget.CardView>
            <de.komoot.android.ui.touring.view.MapControlView
                android:orientation="vertical"
                android:id="@+id/mapControlView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="12dp"
                android:elevation="2dp"
                app:layout_constraintBottom_toTopOf="@+id/layout_map_scale"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/group_tour_participants"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                app:layout_constraintBottom_toTopOf="@+id/layout_map_scale"
                app:layout_constraintLeft_toRightOf="@+id/heatmap_button_stack"
                app:layout_constraintRight_toLeftOf="@+id/layout_holder"/>
            <Space
                android:id="@+id/bottom_bar_content_holder_spacer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.compose.ui.platform.ComposeView
            android:theme="@style/ThemeOverlay.KmtTheme.Dark"
            android:layout_gravity="bottom"
            android:id="@+id/map_style_switcher_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="101dp"/>
        <androidx.compose.ui.platform.ComposeView
            android:theme="@style/ThemeOverlay.KmtTheme.Dark"
            android:layout_gravity="bottom"
            android:id="@+id/popup_banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>
