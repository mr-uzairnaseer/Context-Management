<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.komoot.android.widget.KmtRecyclerView
        android:id="@+id/mRecyclerViewNRV"
        android:paddingBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/mDoneCTAContainerLL"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <FrameLayout
            android:background="@color/surface_fill_primary_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/mDoneCTA"
                android:background="@drawable/btn_primary_rounded_16dp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="@string/btn_done"
                android:lines="1"
                android:layout_marginStart="@dimen/default_margin_and_padding"
                android:layout_marginEnd="@dimen/default_margin_and_padding"
                android:elevation="2dp"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
