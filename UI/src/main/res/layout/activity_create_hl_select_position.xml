<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ViewStub
        android:id="@+id/map_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_bottom_bar"
        android:layout_below="@+id/switch_segment"
        android:layout_alignWithParentIfMissing="true"/>
    <Switch
        android:textSize="16sp"
        android:id="@+id/switch_segment"
        android:background="@drawable/background_actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/hl_create_option_select_segment"
        android:layout_alignParentTop="true"
        android:fontFamily="?attr/fontRegular"
        android:paddingStart="72dp"
        android:paddingEnd="16dp"
        android:elevation="3dp"
        app:thumbTint="@color/switch_thumb_color"
        app:trackTint="@color/switch_track_color"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/first_time_info"
        android:background="@color/secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch_segment"
        android:elevation="3dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info"
                android:layout_marginStart="16dp"
                app:tint="@color/white"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.TextDefault"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hl_create_info_txt"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="16dp"/>
        </LinearLayout>
        <de.komoot.android.view.AutoFitTextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/close_first_time_info"
            android:background="@drawable/bg_blue_ripple_rounded_8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:text="@string/hl_create_info_cta"
            android:textAllCaps="true"
            android:fontFamily="?attr/fontBold"
            android:layout_marginStart="72dp"/>
    </LinearLayout>
    <View
        android:background="@drawable/gradient_vertical_black_alpha0_black_alpha10"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_above="@+id/view_bottom_bar"
        android:layout_alignWithParentIfMissing="true"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/view_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <de.komoot.android.view.AutoFitTextView
            android:enabled="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/create_hl"
            android:background="@drawable/btn_primary"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:text="@string/hl_create_hl_cta"
            android:maxLines="1"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="3dp"/>
        <de.komoot.android.view.AutoFitTextView
            android:enabled="false"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/save_draft_hl"
            android:background="@drawable/btn_white_states"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:text="@string/hl_create_save_draft_cta"
            android:maxLines="1"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="3dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/component_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
