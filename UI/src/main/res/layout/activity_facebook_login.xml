<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/list_item_side_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:id="@+id/textViewFacebookBlurb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
            android:text="@string/setting_blurb_facebook_connect"
            android:fontFamily="?attr/fontRegular"/>
        <Button
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/buttonFacebookLogin"
            android:background="@drawable/btn_fb_states"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="?attr/fontRegular"
            style="@style/CallToActionButtonFullWidth"/>
    </LinearLayout>
</ScrollView>
