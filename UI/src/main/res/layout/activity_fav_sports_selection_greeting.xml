<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/canvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="28sp"
        android:paddingTop="148dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_sport_selection_greetingfavorite_title"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/activity_fav_sports_greeting_pics"
        android:layout_width="375dp"
        android:layout_height="264dp"/>
    <TextView
        android:textSize="16sp"
        android:gravity="center"
        android:id="@+id/activity_fav_sports_greeting_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
    <ImageView
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_komoot_love_informal"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/activity_fav_sports_greeting_next"
            android:layout_width="@dimen/onboarding_next_button_width"
            android:layout_height="36dp"
            android:layout_margin="@dimen/onboarding_next_button_margin"
            android:text="@string/btn_next"/>
    </FrameLayout>
</LinearLayout>
