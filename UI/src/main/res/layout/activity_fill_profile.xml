<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/content_root"
    android:background="@color/surface_fill_primary_default"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_gravity="center"
            android:id="@+id/fpa_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"/>
        <ScrollView
            android:id="@+id/fpa_content"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/btn_back"
                    android:background="@drawable/btn_circle_white_grey_effects_states"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_arrow_left"
                    android:layout_marginStart="16dp"
                    android:elevation="2dp"
                    app:tint="@color/action_content_fill_white_default"/>
                <ViewStub
                    android:id="@+id/user_avatar"
                    android:inflatedId="@+id/fpa_user_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Komoot.Theme2.Heading01Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/fpa_caption"
                    android:layout_marginHorizontal="16dp"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Medium"
                    android:textColor="@color/text_secondary_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/fpa_caption_subtitle"
                    android:layout_marginHorizontal="16dp"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Komoot.Theme2.Heading05Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/fpa_your_name_floating_label"
                    android:layout_marginHorizontal="16dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/bg_round_textfield"
                    android:addStatesFromChildren="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp">
                    <EditText
                        android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Medium"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_secondary"
                        android:id="@+id/fpa_input_field_tet"
                        android:background="@color/transparent"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/fpa_your_name_hint"
                        android:layout_weight="1"
                        android:inputType="textCapWords"
                        android:imeOptions="actionDone"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>
                    <ImageButton
                        android:layout_gravity="end|center_vertical"
                        android:id="@+id/btn_clear_text"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_x_close"
                        android:layout_marginEnd="12dp"/>
                </LinearLayout>
                <TextView
                    android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Medium"
                    android:textColor="@color/text_orange_default"
                    android:id="@+id/fpa_feedback_message_ttv"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="16dp"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <FrameLayout
        android:orientation="horizontal"
        android:id="@+id/fpa_done_cta_tb"
        android:background="@drawable/btn_blue_states"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="20dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Bold"
                android:textColor="@color/cta_text_states"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_next"
                android:textAllCaps="false"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_narrow_right"
                android:layout_marginHorizontal="8dp"
                app:tint="@color/action_content_fill_primary_default"/>
        </LinearLayout>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/fpa_account_creation_progress_pb"
            android:visibility="gone"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/primary"/>
    </FrameLayout>
</LinearLayout>
