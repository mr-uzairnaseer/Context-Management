<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/fcca_tabbar_container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">
        <de.komoot.android.view.composition.TabBarTextTab
            android:id="@+id/mToursTab"
            android:background="@drawable/bg_dark_tab_bar_states"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:tabActive="true"
            app:tabActiveTextColor="@color/primary"
            app:tabDefaultTextColor="@color/black"
            app:tabTitle="@string/fcca_tours_tab_title"/>
        <de.komoot.android.view.composition.TabBarTextTab
            android:id="@+id/mHighlightsTab"
            android:background="@drawable/bg_dark_tab_bar_states"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:tabActive="false"
            app:tabActiveTextColor="@color/primary"
            app:tabDefaultTextColor="@color/black"
            app:tabTitle="@string/fcca_highlights_tab_title"/>
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fcca_tabbar_container"/>
    <ImageButton
        android:id="@+id/mSearchButtonIB"
        android:background="@drawable/btn_round_blue_states"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="76dp"
        android:src="@drawable/ic_btn_search_white"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/default_margin_and_padding"
        android:layout_alignParentEnd="true"
        android:elevation="3dp"/>
    <RelativeLayout
        android:id="@+id/mBottomCTAsContainerRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_cta"
            android:background="@color/surface_fill_primary_default"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:baselineAligned="false"
            android:layout_alignParentBottom="true">
            <Button
                android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Bold"
                android:textSize="16sp"
                android:textColor="@color/action_content_fill_secondary_default"
                android:gravity="center"
                android:id="@+id/mEditSelectionButtonTB"
                android:background="@drawable/btn_secondary_rounded_16dp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:lines="1"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:elevation="2dp"/>
            <Button
                android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/mSaveButtonTB"
                android:background="@drawable/btn_primary_rounded_16dp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="@string/fcca_save_cta"
                android:lines="1"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
