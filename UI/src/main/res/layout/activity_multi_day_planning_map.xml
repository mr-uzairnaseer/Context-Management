<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.komoot.android.ui.planning.view.DraggableTopPaneView
        android:id="@+id/draggable_top_view"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="9dp"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        layout="@layout/inc_map_new"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/layout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imagebutton_exit"
            android:background="@drawable/bg_circle_black"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:alpha="0.6"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentStart="true"
            app:tint="@color/white"/>
        <ImageButton
            android:id="@+id/imagebutton_undo"
            android:background="@drawable/bg_circle_black_40p"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_undo_normal_states"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@+id/imagebutton_more"/>
        <ImageButton
            android:id="@+id/imagebutton_more"
            android:background="@null"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/btn_more_menu_states"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_stages"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/layout_top_bar"/>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/map_overlays"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="160dp"
        android:layout_above="@+id/layout_bottom"
        android:layout_below="@+id/recyclerview_stages"
        android:layout_alignParentEnd="true">
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_gravity="end"
                android:id="@+id/layout_search"
                android:background="@color/action_base_fill_white_default"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="12dp"
                android:elevation="2dp"
                app:cardBackgroundColor="@color/action_base_fill_white_default"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/button_variants"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/image_variants"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_map_layers"
                            android:scaleType="center"
                            app:tint="@color/icon_primary_default"/>
                    </FrameLayout>
                    <View
                        android:id="@+id/divider_category"
                        android:background="@color/surface_stroke_primary_default"
                        android:layout_width="30dp"
                        android:layout_height="1dp"/>
                    <FrameLayout
                        android:id="@+id/button_category"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/image_category"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:scaleType="center"
                            app:tint="@color/icon_primary_default"/>
                    </FrameLayout>
                    <View
                        android:id="@+id/divider_tour_hide"
                        android:background="@color/surface_stroke_primary_default"
                        android:layout_width="30dp"
                        android:layout_height="1dp"/>
                    <FrameLayout
                        android:id="@+id/button_tour_hide"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/image_tour_hide"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_invisible"
                            android:scaleType="center"
                            app:tint="@color/icon_primary_default"/>
                    </FrameLayout>
                    <View
                        android:id="@+id/divider2"
                        android:background="@color/surface_stroke_primary_default"
                        android:layout_width="30dp"
                        android:layout_height="1dp"/>
                    <FrameLayout
                        android:id="@+id/button_search"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/image_search"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_btn_search_white"
                            android:scaleType="center"
                            app:tint="@color/icon_primary_default"/>
                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/imagebutton_current_location"
                android:background="@drawable/btn_round_white_with_grey_effect_states"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="16dp"
                android:elevation="3dp"/>
        </LinearLayout>
    </LinearLayout>
    <de.komoot.android.view.composition.DraggableBottomUpView
        android:id="@+id/draggable_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dragDown="200dp"
        app:dragHalf="260dp"
        app:dragInit="half"
        app:dragUp="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_find_accommodation"
                android:background="@drawable/btn_white_chip_72dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/multiday_btn_find_accommodation"
                android:textAllCaps="false"
                android:fontFamily="?attr/fontBold"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>
            <de.komoot.android.widget.NotifyingScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:id="@+id/framelayout_stub_route_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </de.komoot.android.widget.NotifyingScrollView>
        </LinearLayout>
    </de.komoot.android.view.composition.DraggableBottomUpView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="160dp"
        android:layout_above="@+id/layout_bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true">
        <ImageButton
            android:layout_gravity="end|bottom"
            android:id="@+id/imagebutton_current_location2"
            android:background="@drawable/btn_round_white_with_grey_effect_states"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_location"
            android:elevation="3dp"/>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/layout_bottom_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/view_shadow_summary"
            android:background="@drawable/gradient_top_transparent_to_bottom_light_grey_transparent"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_above="@+id/layout_cta_summary"/>
        <FrameLayout
            android:id="@+id/layout_cta_summary"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:baselineAligned="false"
            android:layout_alignParentBottom="true">
            <Button
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:gravity="center"
                android:id="@+id/button_summary"
                android:background="@drawable/bg_white_with_grey_effect_states"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/multiday_stages_btn_summary"
                android:lines="1"
                android:fontFamily="?attr/fontBold"/>
        </FrameLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_bottom_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/view_shadow_save"
            android:background="@drawable/gradient_top_transparent_to_bottom_light_grey_transparent"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_above="@+id/layout_cta_save"/>
        <FrameLayout
            android:id="@+id/layout_cta_save"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:baselineAligned="false"
            android:layout_alignParentBottom="true">
            <Button
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/button_save"
                android:background="@drawable/btn_primary"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="@string/multiday_stages_save_stage_cta"
                android:lines="1"
                android:fontFamily="?attr/fontRegular"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"/>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
