<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_alignParentTop="true">
        <include layout="@layout/inc_map_new"/>
    </FrameLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/layout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imagebutton_exit"
            android:background="@drawable/bg_circle_black"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:alpha="0.6"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentStart="true"
            app:tint="@color/white"/>
        <ImageButton
            android:id="@+id/imagebutton_more"
            android:background="@null"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/btn_more_menu_states"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_stages"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/layout_top_bar"/>
    <de.komoot.android.view.composition.DraggableBottomUpView
        android:id="@+id/draggable_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dragDown="146dp"
        app:dragHalf="260dp"
        app:dragInit="half"
        app:dragUp="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"/>
        </RelativeLayout>
    </de.komoot.android.view.composition.DraggableBottomUpView>
    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/view_shadow"
            android:background="@drawable/gradient_top_transparent_to_bottom_light_grey_transparent"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_above="@+id/layout_cta"/>
        <FrameLayout
            android:id="@+id/layout_cta"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:baselineAligned="false"
            android:layout_alignParentBottom="true">
            <Button
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/button_save"
                android:background="@drawable/btn_primary"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="@string/multiday_stages_save_cta"
                android:lines="1"
                android:fontFamily="?attr/fontRegular"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"/>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
