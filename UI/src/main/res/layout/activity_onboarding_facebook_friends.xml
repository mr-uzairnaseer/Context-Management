<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/onboarding_indicators"
        layout="@layout/layout_onboarding_indicators"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/off_friends"
        android:paddingBottom="@dimen/onboarding_bottom_gradient_height"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/onboarding_indicators"
        android:layout_centerHorizontal="true"/>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/off_loading"
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="@dimen/onboarding_bottom_gradient_height"
        android:indeterminate="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <View
        android:background="@drawable/gradient_top_transparent_to_bottom_dark_grey_transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/onboarding_bottom_gradient_height"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/off_next"
        android:layout_width="@dimen/onboarding_next_button_width"
        android:layout_height="36dp"
        android:layout_marginBottom="@dimen/onboarding_next_button_margin"
        android:text="@string/onboarding_facebook_friends_next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/onboarding_next_button_margin"
        android:layout_marginEnd="@dimen/onboarding_next_button_margin"/>
</RelativeLayout>
