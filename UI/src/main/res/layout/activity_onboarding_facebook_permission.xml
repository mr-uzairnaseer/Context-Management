<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_facebook_permission"
        android:scaleType="centerCrop"/>
    <include
        android:id="@+id/onboarding_indicators"
        layout="@layout/layout_onboarding_indicators"/>
    <ScrollView
        android:paddingBottom="@dimen/onboarding_bottom_gradient_height"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/onboarding_indicators"
        android:layout_centerHorizontal="true"
        android:overScrollMode="ifContentScrolls">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/onboarding_side_margin"
            android:layout_marginTop="@dimen/onboarding_title_margin_top"
            android:layout_marginRight="@dimen/onboarding_side_margin">
            <de.komoot.android.view.AutoFitTextView
                android:textAppearance="?attr/textAppearanceTitle"
                android:gravity="center_horizontal"
                android:id="@+id/ofp_title"
                android:layout_width="@dimen/onboarding_title_width"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_facebook_title"
                android:maxLines="2"/>
            <TextView
                android:textAppearance="?attr/textAppearanceSubtitle"
                android:gravity="center"
                android:id="@+id/ofp_subtitle"
                android:layout_width="@dimen/onboarding_subtitle_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/onboarding_subtitle_margin_top"
                android:text="@string/onboarding_facebook_subtitle"
                android:layout_marginStart="@dimen/onboarding_side_margin"
                android:layout_marginEnd="@dimen/onboarding_side_margin"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ofp_facebook_container"
                android:paddingTop="50dp"
                android:layout_width="@dimen/onboarding_subtitle_width"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_onboarding_facebook"/>
                <Button
                    android:textColor="@color/text_on_dark"
                    android:id="@+id/ofp_facebook_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/onboarding_facebook_permission_button_margin_top"
                    android:text="@string/onboarding_facebook_permission_cta"
                    style="@style/KmtWidget.Onboarding.Button.Border"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/ofp_skip"
        android:layout_width="@dimen/onboarding_next_button_width"
        android:layout_height="36dp"
        android:layout_marginBottom="@dimen/onboarding_next_button_margin"
        android:text="@string/onboarding_facebook_permission_skip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/onboarding_next_button_margin"
        android:layout_marginEnd="@dimen/onboarding_next_button_margin"/>
</RelativeLayout>
