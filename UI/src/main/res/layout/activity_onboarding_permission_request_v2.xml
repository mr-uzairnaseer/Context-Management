<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="0x7f080654"
        android:scaleType="centerCrop"/>
    <include
        android:id="@+id/onboarding_indicators"
        layout="@layout/layout_onboarding_indicators"/>
    <de.komoot.android.view.AutoFitTextView
        android:textAppearance="?attr/textAppearanceTitle"
        android:gravity="center_horizontal"
        android:id="@+id/opra_title"
        android:layout_width="@dimen/onboarding_title_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/onboarding_title_margin_top"
        android:text="@string/onboarding_permission_request_title_v2"
        android:maxLines="2"
        android:layout_below="@+id/onboarding_indicators"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/onboarding_side_margin"
        android:layout_marginEnd="@dimen/onboarding_side_margin"/>
    <TextView
        android:textAppearance="?attr/textAppearanceSubtitle"
        android:gravity="center_horizontal"
        android:id="@+id/opra_subtitle"
        android:layout_width="@dimen/onboarding_subtitle_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/onboarding_subtitle_margin_top"
        android:text="@string/onboarding_permission_request_subtitle_v2"
        android:layout_below="@+id/opra_title"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/onboarding_side_margin"
        android:layout_marginEnd="@dimen/onboarding_side_margin"/>
    <View
        android:background="@drawable/gradient_top_transparent_to_bottom_dark_grey_transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/onboarding_bottom_gradient_height"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/button_request_permission"
        android:layout_width="@dimen/onboarding_next_button_width"
        android:layout_height="36dp"
        android:layout_margin="@dimen/onboarding_next_button_margin"
        android:text="@string/btn_next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
