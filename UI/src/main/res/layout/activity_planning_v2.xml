<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:theme="@style/KmtThemeOverlay.LightActionBar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/planner_title"
        app:titleTextAppearance="@style/KmtToolbarStyle.TitleText"/>
    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <de.komoot.android.ui.planning.view.DraggableTopPaneView
            android:id="@+id/draggable_top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:elevation="9dp"/>
        <de.komoot.android.view.MapScale
            android:gravity="center_horizontal"
            android:id="@+id/layout_map_scale"
            android:paddingBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:elevation="1dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/layout_toolbar"
            android:background="@color/action_base_fill_white_default"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"
            android:elevation="2dp"
            app:cardBackgroundColor="@color/action_base_fill_white_default"
            app:cardCornerRadius="22dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/button_variants"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/image_variants"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_map_layers"
                        android:scaleType="center"
                        app:tint="@color/icon_primary_default"/>
                </FrameLayout>
                <View
                    android:id="@+id/divider_category"
                    android:background="@color/surface_stroke_primary_default"
                    android:layout_width="30dp"
                    android:layout_height="1dp"/>
                <FrameLayout
                    android:id="@+id/button_category"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/image_category"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="center"
                        app:tint="@color/icon_primary_default"/>
                </FrameLayout>
                <View
                    android:id="@+id/divider_undo"
                    android:background="@color/surface_stroke_primary_default"
                    android:layout_width="30dp"
                    android:layout_height="1dp"/>
                <FrameLayout
                    android:id="@+id/button_undo"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/image_undo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_undo"
                        android:scaleType="center"
                        app:tint="@color/icon_primary_default"/>
                </FrameLayout>
                <View
                    android:id="@+id/divider_redo"
                    android:background="@color/surface_stroke_primary_default"
                    android:layout_width="30dp"
                    android:layout_height="1dp"/>
                <FrameLayout
                    android:id="@+id/button_redo"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/image_redo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_redo"
                        android:scaleType="center"
                        app:tint="@color/icon_primary_default"/>
                </FrameLayout>
                <View
                    android:id="@+id/divider_tour_hide"
                    android:background="@color/surface_stroke_primary_default"
                    android:layout_width="30dp"
                    android:layout_height="1dp"/>
                <FrameLayout
                    android:id="@+id/button_tour_hide"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/image_tour_hide"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_invisible"
                        android:scaleType="center"
                        app:tint="@color/icon_primary_default"/>
                </FrameLayout>
                <View
                    android:id="@+id/divider_search"
                    android:background="@color/surface_stroke_primary_default"
                    android:layout_width="30dp"
                    android:layout_height="1dp"/>
                <FrameLayout
                    android:id="@+id/button_search"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/image_search"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        android:scaleType="center"
                        app:tint="@color/icon_primary_default"/>
                </FrameLayout>
                <View
                    android:id="@+id/divider5"
                    android:background="@color/surface_stroke_primary_default"
                    android:layout_width="30dp"
                    android:layout_height="1dp"/>
                <FrameLayout
                    android:id="@+id/button_current_location"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/image_current_location"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        android:scaleType="center"
                        app:tint="@color/icon_primary_default"/>
                </FrameLayout>
                <View
                    android:id="@+id/divider6"
                    android:background="@color/surface_stroke_primary_default"
                    android:layout_width="30dp"
                    android:layout_height="1dp"/>
                <FrameLayout
                    android:id="@+id/button_more"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/image_more"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_toolkit_more"
                        android:scaleType="center"
                        app:tint="@color/icon_primary_default"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/button_dropdown"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/image_dropdown"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_drop_down"
                        android:scaleType="center"
                        app:tint="@color/icon_primary_default"/>
                </FrameLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:id="@+id/view_planning_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/navigation_bar"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">
            <include layout="@layout/inc_map_new"/>
        </RelativeLayout>
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/heatmap_button_stack"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:elevation="2dp"/>
        <androidx.compose.ui.platform.ComposeView
            android:theme="@style/ThemeOverlay.KmtTheme.Dark"
            android:id="@+id/popup_banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/navigation_bar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:translationZ="24dp"/>
        <androidx.compose.ui.platform.ComposeView
            android:theme="@style/ThemeOverlay.KmtTheme.Dark"
            android:id="@+id/map_style_switcher_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/navigation_bar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:elevation="101dp"/>
        <androidx.compose.ui.platform.ComposeView
            android:theme="@style/ThemeOverlay.KmtTheme.Dark"
            android:id="@+id/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kmt_main_bottom_navigation_bar_height"
            android:layout_alignParentBottom="true"
            android:elevation="24dp"/>
    </RelativeLayout>
</LinearLayout>
