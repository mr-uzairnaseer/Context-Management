<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:background="@color/surface_fill_primary_default"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.komoot.android.widget.NotifyingScrollView
        android:scrollbarStyle="outsideOverlay"
        android:id="@+id/scrollview"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="84dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/compose_view_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ViewStub
                android:id="@+id/view_stub_route_elevation_profile"
                android:inflatedId="@+id/view_route_evelation_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"/>
            <ViewStub
                android:id="@+id/view_stub_route_info_ways"
                android:inflatedId="@+id/view_legend_ways"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"/>
            <ViewStub
                android:id="@+id/view_stub_route_info_surfaces"
                android:inflatedId="@+id/view_legend_surfaces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"/>
            <ViewStub
                android:id="@+id/view_stub_route_weather_summary"
                android:inflatedId="@+id/view_route_weather_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_marginBottom="30dp"/>
            <de.komoot.android.view.AlertView
                android:id="@+id/smart_tour_source_info"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                app:actionText="@string/generic_learn_more"
                app:message="@string/smart_tours_source_explanation"
                app:tone="info"/>
            <TextView
                android:textSize="16sp"
                android:id="@+id/editorial_tour_source_info"
                android:background="@drawable/bg_muted_rounded_8dp"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:text="@string/editorial_tours_source_explanation"
                android:fontFamily="?attr/fontRegular"/>
        </LinearLayout>
    </de.komoot.android.widget.NotifyingScrollView>
    <View
        android:id="@+id/view_statusbar_underlay"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <androidx.fragment.app.FragmentContainerView
        android:name="de.komoot.android.ui.tour.ActionButtonBarFragment"
        android:id="@+id/fragment_container_view"
        android:tag="action_button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_route_overlay_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/download_gpx_modal_bottomsheet_container"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
