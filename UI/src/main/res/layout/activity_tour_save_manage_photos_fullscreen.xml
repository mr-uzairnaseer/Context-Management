<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/tstppfa_horizontal_photo_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tstppfa_pagenumber_tv"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tstppfa_toggle_photo_tv"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_margin="@dimen/default_margin_and_padding"
        android:text="@string/tstppfa_add_to_tour"
        android:drawablePadding="@dimen/default_margin_and_padding"
        android:layout_alignParentBottom="true"
        android:drawableStart="0x7f080a8b"
        android:fontFamily="?attr/fontRegular"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/default_margin_and_padding"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tstppfa_pagenumber_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_and_padding"
        android:layout_marginTop="@dimen/default_margin_and_padding"
        android:layout_marginRight="@dimen/default_margin_and_padding"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="?attr/fontRegular"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
