<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:id="@+id/layout_tour_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/muted"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:elevation="3dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_header_box"
            android:background="@color/primary"
            android:paddingTop="@dimen/default_margin_and_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <TextView
                android:textSize="24sp"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:gravity="start|center_vertical"
                android:id="@+id/textview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/transparent_notification_bar_spacing"
                android:layout_marginRight="16dp"
                android:text="@string/tstp_invited_title"
                android:maxLines="3"
                android:fontFamily="?attr/fontRegular"
                android:textAlignment="textStart"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:gravity="start|center_vertical"
                android:id="@+id/textview_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="16dp"
                android:text="@string/tstp_invited_subtitle"
                android:maxLines="3"
                android:fontFamily="?attr/fontRegular"
                android:textAlignment="textStart"/>
            <Button
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/button_tag"
                android:background="@drawable/btn_white_states"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/after_tour_action_tag_people"
                android:maxLines="1"
                android:textAllCaps="true"
                android:fontFamily="?attr/fontRegular"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:elevation="3dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:gravity="end|center_vertical"
                android:layout_gravity="end"
                android:id="@+id/textview_manage"
                android:background="@drawable/background_textbutton_header_green"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/tstp_button_manage"
                android:maxLines="1"
                android:textAllCaps="true"
                android:fontFamily="?attr/fontRegular"
                android:textAlignment="textEnd"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/scrollview_participants"
            android:background="@color/canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_header_box">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_holder_participants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_bar_bottom"
            android:background="@color/navigation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/text_on_dark"
                android:gravity="start|center_vertical"
                android:id="@+id/textview_step_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/tstp_step_back"
                android:maxLines="1"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:fontFamily="?attr/fontRegular"
                android:textAlignment="textStart"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/text_on_dark"
                android:gravity="end|center_vertical"
                android:id="@+id/textview_step_skip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/tstp_step_skip"
                android:maxLines="1"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:fontFamily="?attr/fontRegular"
                android:textAlignment="textEnd"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <Button
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/btn_text_colors_black_with_white_effect"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/button_confirm"
                android:background="@drawable/btn_round_white_with_grey_effect_states"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="24dp"
                android:text="@string/tstp_step_next"
                android:textAllCaps="true"
                android:fontFamily="?attr/fontRegular"
                android:elevation="3dp"/>
        </FrameLayout>
    </RelativeLayout>
    <View
        android:background="@color/muted"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>
