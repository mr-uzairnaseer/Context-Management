<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/surface_fill_primary_default"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <GridLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnOrderPreserved="false"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding">
        <TextView
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_column="0"
            android:text="@string/user_stats_completed"
            android:layout_row="0"
            style="@style/TextAppearance.Komoot.Theme2.Heading05Medium"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:id="@+id/tours_completed"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_column="3"
            android:layout_row="0"
            android:fontFamily="?attr/fontRegular"
            android:layout_columnWeight="1"/>
        <TextView
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_column="0"
            android:text="@string/user_stats_time"
            android:layout_row="1"
            style="@style/TextAppearance.Komoot.Theme2.Heading05Medium"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_column="3"
            android:layout_row="1"
            android:fontFamily="?attr/fontRegular"
            android:layout_columnWeight="1"/>
        <TextView
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_column="0"
            android:text="@string/user_stats_distance"
            android:layout_row="2"
            style="@style/TextAppearance.Komoot.Theme2.Heading05Medium"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_column="3"
            android:layout_row="2"
            android:fontFamily="?attr/fontRegular"
            android:layout_columnWeight="1"/>
        <TextView
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_column="0"
            android:text="@string/user_stats_elevation"
            android:layout_row="3"
            style="@style/TextAppearance.Komoot.Theme2.Heading05Medium"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:id="@+id/elevation"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_column="3"
            android:layout_row="3"
            android:fontFamily="?attr/fontRegular"
            android:layout_columnWeight="1"/>
    </GridLayout>
</LinearLayout>
