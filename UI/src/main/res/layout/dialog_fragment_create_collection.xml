<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.komoot.android.view.AutoFitEditText
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textColorHint="@color/text_secondary"
        android:id="@+id/ccdf_name_input_taet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_and_padding"
        android:hint="@string/ccd_name_input_hint"
        android:lines="1"
        android:inputType="textAutoCorrect"
        android:imeOptions="actionDone"
        android:fontFamily="?attr/fontRegular"/>
</FrameLayout>
