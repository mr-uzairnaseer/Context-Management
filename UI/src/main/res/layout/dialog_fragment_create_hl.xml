<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/select_higlight_bottom_sheet_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="242dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.Theme2.Heading04Medium"
                android:textColor="@color/text_primary_default"
                android:gravity="center_vertical"
                android:id="@+id/hl_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/hl_create_a_hl_title"
                android:layout_weight="1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/hl_close_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_x_close"
                android:tint="@color/text_secondary_default"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label03Medium"
            android:textColor="@color/text_secondary_default"
            android:gravity="center_vertical"
            android:id="@+id/hl_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/hl_create_a_hl_subtitle"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Medium"
            android:textColor="@color/text_primary_default"
            android:gravity="center_vertical"
            android:id="@+id/hl_from_tour"
            android:background="@drawable/bg_white_shape_with_grey_effect_states"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="@string/hl_create_option_from_tour"
            android:maxLines="2"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_route"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        <View
            android:background="@color/surface_stroke_primary_default"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Medium"
            android:textColor="@color/text_primary_default"
            android:gravity="center_vertical"
            android:id="@+id/hl_select_point"
            android:background="@drawable/bg_white_shape_with_grey_effect_states"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="@string/hl_create_option_select_point"
            android:maxLines="2"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_poi_location"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        <View
            android:background="@color/surface_stroke_primary_default"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Medium"
            android:textColor="@color/text_primary_default"
            android:gravity="center_vertical"
            android:id="@+id/hl_current_position"
            android:background="@drawable/bg_white_shape_with_grey_effect_states"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="@string/hl_create_option_current_position"
            android:maxLines="2"
            android:drawablePadding="16dp"
            android:drawableStart="0x7f080bac"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        <View
            android:background="@color/surface_stroke_primary_default"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Medium"
            android:textColor="@color/text_primary_default"
            android:gravity="center_vertical"
            android:id="@+id/hl_from_photo"
            android:background="@drawable/bg_white_shape_with_grey_effect_states"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="@string/hl_create_option_from_photo"
            android:maxLines="2"
            android:drawablePadding="16dp"
            android:drawableStart="0x7f080bad"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        <View
            android:background="@color/surface_stroke_primary_default"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Medium"
            android:textColor="@color/text_primary_default"
            android:gravity="center_vertical"
            android:id="@+id/hl_help"
            android:background="@drawable/bg_white_shape_with_grey_effect_states"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="@string/hl_create_option_help"
            android:maxLines="2"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_info_circle"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
    </LinearLayout>
</ScrollView>
