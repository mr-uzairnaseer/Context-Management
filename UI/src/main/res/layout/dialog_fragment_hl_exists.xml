<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="288dp">
    <TextView
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hl_create_already_exists_title"
        android:fontFamily="?attr/fontBold"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"/>
    <ScrollView
        android:scrollbarStyle="insideOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/hl_create_already_exists_msg"
                android:fontFamily="?attr/fontRegular"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"/>
            <ImageView
                android:id="@+id/hl_image"
                android:background="@color/disabled_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:minHeight="128dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/hl_icon_name_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/hl_sport_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/hl_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:fontFamily="?attr/fontBold"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_gravity="end"
        android:paddingTop="28dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:alignContent="flex_end"
        app:flexDirection="row"
        app:flexWrap="wrap_reverse"
        app:justifyContent="flex_end">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/secondary"
            android:gravity="end|center_vertical"
            android:id="@+id/cancel"
            android:background="@drawable/btn_white_states"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:text="@string/hl_create_already_exists_cancel_cta"
            android:maxLines="1"
            android:textAllCaps="true"
            android:layout_marginStart="8dp"
            android:elevation="0dp"
            android:outlineProvider="none"
            app:sizeToFit="true"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/secondary"
            android:gravity="end|center_vertical"
            android:id="@+id/confirm"
            android:background="@drawable/btn_white_states"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:text="@string/hl_create_already_exists_contribute_cta"
            android:maxLines="1"
            android:textAllCaps="true"
            android:layout_marginStart="8dp"
            android:elevation="0dp"
            android:outlineProvider="none"
            app:sizeToFit="true"/>
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>
