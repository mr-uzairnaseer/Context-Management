<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:paddingBottom="60dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="0dp"
    android:paddingEnd="8dp">
    <LinearLayout
        android:gravity="start|bottom"
        android:orientation="vertical"
        android:id="@+id/layout_rate"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:id="@+id/textview_btn_thumb_up"
            android:background="@drawable/btn_white_chip_72dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:text="@string/routing_feedback_btn_thumb_up"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_thumbs_up"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="18dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="24dp"
            android:elevation="3dp"
            android:drawableTint="@color/primary"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:id="@+id/textview_btn_thumb_down"
            android:background="@drawable/btn_white_chip_72dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:text="@string/routing_feedback_btn_thumb_down"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_thumbs_down"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="18dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="24dp"
            android:elevation="3dp"
            android:drawableTint="@color/negative"/>
    </LinearLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/layout_sport_select"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:alignContent="flex_start"
        app:alignItems="flex_start"
        app:flexDirection="column"
        app:flexWrap="wrap"
        app:justifyContent="flex_end">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:id="@+id/layout_sport_select_item_running"
            android:background="@drawable/btn_white_chip_72dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:text="@string/sport_jogging"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_sport_jogging_white_in_green_circle"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="18dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="24dp"
            android:elevation="3dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:id="@+id/layout_sport_select_item_road_cycling"
            android:background="@drawable/btn_white_chip_72dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:text="@string/sport_race_bike"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_sport_racebike_white_in_green_circle"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="18dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="24dp"
            android:elevation="3dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:id="@+id/layout_sport_select_item_mtb"
            android:background="@drawable/btn_white_chip_72dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:text="@string/sport_mtb"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_sport_mtb_white_in_green_circle"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="18dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="24dp"
            android:elevation="3dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:id="@+id/layout_sport_select_item_bike_touring"
            android:background="@drawable/btn_white_chip_72dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:text="@string/sport_bike"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_sport_touringbicycle_white_in_green_circle"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="18dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="24dp"
            android:elevation="3dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:id="@+id/layout_sport_select_item_hiking"
            android:background="@drawable/btn_white_chip_72dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:text="@string/sport_hiking"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_sport_hike_white_in_green_circle"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="18dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="24dp"
            android:elevation="3dp"/>
    </com.google.android.flexbox.FlexboxLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/layout_route_feedback"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:alignContent="flex_start"
        app:alignItems="flex_start"
        app:flexDirection="column"
        app:flexWrap="wrap"
        app:justifyContent="flex_end">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:id="@+id/textview_btn_route_closed"
            android:background="@drawable/btn_white_chip_72dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:text="@string/routing_feedback_btn_route_closed"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_action_close_circle"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="18dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="24dp"
            android:elevation="3dp"
            android:drawableTint="@color/negative"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:id="@+id/textview_btn_route_unsuiteable"
            android:background="@drawable/btn_white_chip_72dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:text="@string/sport_lang_surface_unsuitable_hike"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_feedback_routing_unsuitable"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="18dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="24dp"
            android:elevation="3dp"
            android:drawableTint="@color/warning"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:id="@+id/textview_btn_steep"
            android:background="@drawable/btn_white_chip_72dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:text="@string/routing_feedback_btn_steep"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_feedback_steep"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="18dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="24dp"
            android:elevation="3dp"
            android:drawableTint="@color/secondary"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:id="@+id/textview_btn_danger"
            android:background="@drawable/btn_white_chip_72dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:text="@string/routing_feedback_btn_danger"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_feedback_danger"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="18dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="24dp"
            android:elevation="3dp"
            android:drawableTint="@color/negative"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:id="@+id/textview_btn_other"
            android:background="@drawable/btn_white_chip_72dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:text="@string/routing_feedback_btn_other"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_feedback_other"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="18dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="24dp"
            android:elevation="3dp"
            android:drawableTint="#801080"/>
    </com.google.android.flexbox.FlexboxLayout>
</FrameLayout>
