<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    android:paddingStart="@dimen/list_item_side_padding"
    android:paddingEnd="@dimen/list_item_side_padding">
    <EditText
        android:textSize="18sp"
        android:id="@+id/edittext_image_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="@string/tour_image_upload_name_hint"
        android:maxLines="1"
        android:maxLength="254"
        android:inputType="text"
        android:fontFamily="?attr/fontRegular"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/secondary"
            android:layout_gravity="center"
            android:id="@+id/btn_cancel"
            android:background="@drawable/bg_ripple_on_light"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel"
            android:fontFamily="?attr/fontRegular"/>
        <Button
            android:textSize="19sp"
            android:textColor="@color/white"
            android:id="@+id/btn_upload"
            android:background="@drawable/btn_primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:minWidth="200dp"
            android:text="@string/tour_image_upload_button"
            android:layout_weight="1"
            android:fontFamily="?attr/fontRegular"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/layout_dev_feature"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:background="@drawable/bg_white_bg_yellow_stroke_5dp_rounded_corners_16dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="@dimen/list_item_side_padding"
            android:paddingEnd="@dimen/list_item_side_padding">
            <androidx.appcompat.widget.SwitchCompat
                android:textSize="16sp"
                android:textColor="@color/switch_text_color"
                android:id="@+id/switch_tour_uploader"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textOn="@string/button_on"
                android:textOff="@string/button_off"
                android:layout_alignParentTop="true"
                android:fontFamily="?attr/fontRegular"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:textSize="16sp"
                android:id="@+id/textview_upload"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/tour_image_upload_run"
                android:maxLines="1"
                android:layout_alignBaseline="@+id/switch_tour_uploader"
                android:imeOptions="actionDone"
                android:fontFamily="?attr/fontRegular"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>
        <TextView
            android:background="@drawable/bg_yellow_rounded_2dp_corners"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/tour_image_dev_options"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginStart="32dp"/>
    </FrameLayout>
</LinearLayout>
