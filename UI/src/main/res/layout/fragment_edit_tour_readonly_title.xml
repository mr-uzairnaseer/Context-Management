<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/layout_name"
    android:paddingLeft="@dimen/list_item_side_padding"
    android:paddingTop="16dp"
    android:paddingRight="@dimen/list_item_side_padding"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_rename"
        android:scaleType="centerInside"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/etctf_description_area"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp">
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:id="@+id/etctf_textview_tour_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:fontFamily="?attr/fontBold"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/text_whisper"
            android:id="@+id/etctf_textview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/edit_description_header_add_description"
            android:fontFamily="?attr/font"/>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/secondary"
        android:id="@+id/etctf_edit_button"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_description_header_cta"
        android:fontFamily="?attr/fontBold"/>
</LinearLayout>
