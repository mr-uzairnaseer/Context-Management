<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/surface_fill_primary_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20sp"
        android:textColor="@color/text_underline"
        android:gravity="center_horizontal"
        android:id="@+id/hlf_state_ttv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="?attr/fontRegular"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding"/>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/empty_highlights_list_compose_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <de.komoot.android.widget.NotifyingListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"/>
    <ImageButton
        android:id="@+id/button_search"
        android:background="@drawable/btn_round_blue_states"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_btn_search_white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:elevation="3dp"/>
</RelativeLayout>
