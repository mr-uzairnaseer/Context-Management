<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:baselineAligned="false"
    android:minHeight="96dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">
        <FrameLayout
            android:id="@+id/layout_container_left"
            android:background="@drawable/bg_white_shape_with_grey_effect_states"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:gravity="start|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:minHeight="74dp">
                <TextView
                    android:textSize="36sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/textview_left_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:maxLines="1"
                    android:layout_alignParentTop="false"
                    android:layout_marginStart="36dp"
                    android:layout_alignParentStart="true"
                    style="@style/TextAppearance.Komoot.Theme2.Heading01Medium"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/textview_left_value_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_alignBaseline="@+id/textview_left_value"
                    android:fontFamily="?attr/fontRegular"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/textview_left_value"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/textview_left_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/map_stats_current_speed"
                    android:maxLines="1"
                    android:layout_below="@+id/textview_left_value"
                    android:fontFamily="?attr/fontRegular"
                    android:layout_alignStart="@+id/textview_left_value"/>
            </RelativeLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/layout_container_right"
            android:background="@drawable/bg_white_white_grey_with_grey_effect_states"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:gravity="start|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:minHeight="74dp">
                <TextView
                    android:textSize="36sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/textview_right_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:maxLines="1"
                    android:layout_alignParentTop="false"
                    android:layout_marginStart="36dp"
                    android:layout_alignParentStart="true"
                    style="@style/TextAppearance.Komoot.Theme2.Heading01Medium"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/textview_right_value_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_alignBaseline="@+id/textview_right_value"
                    android:fontFamily="?attr/fontRegular"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/textview_right_value"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/textview_right_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/map_stats_avg_speed"
                    android:maxLines="1"
                    android:layout_below="@+id/textview_right_value"
                    android:fontFamily="?attr/fontRegular"
                    android:layout_alignStart="@+id/textview_right_value"/>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:minHeight="74dp"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageview_stats_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="0x7f080ecf"
            android:scaleType="centerInside"/>
    </FrameLayout>
</RelativeLayout>
