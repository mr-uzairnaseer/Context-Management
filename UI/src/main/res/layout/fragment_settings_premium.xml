<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content"
        android:padding="@dimen/default_margin_and_padding"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/premium_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_premium_status"
            android:fontFamily="?attr/fontRegular"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/premium_play_store_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:text="@string/settings_premium_instructions"
            android:fontFamily="?attr/fontRegular"/>
        <Button
            android:textSize="18sp"
            android:textColor="@color/secondary"
            android:id="@+id/premium_learn_more"
            android:background="@drawable/btn_white_rounded_corners_states"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:text="@string/settings_premium_learn_more"
            android:fontFamily="?attr/fontRegular"
            android:paddingStart="@dimen/default_margin_and_padding"
            android:paddingEnd="@dimen/default_margin_and_padding"
            android:elevation="3dp"
            app:elevation="3dp"/>
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/premium_debug_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"/>
    </LinearLayout>
</ScrollView>
