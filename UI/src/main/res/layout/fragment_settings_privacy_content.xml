<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/muted"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/surface_fill_primary_default"
            android:padding="@dimen/default_margin_and_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_privacy_content_tour_header"
                android:fontFamily="?attr/fontBold"/>
            <TextView
                android:textSize="18sp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_privacy_content_tour_header_subtitle"/>
            <de.komoot.android.feature.appsettings.ui.RadioGroupContainer
                android:id="@+id/settings_privacy_tour_visibility_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.komoot.android.feature.appsettings.ui.RadioItemSelector
                    android:id="@+id/settings_privacy_tour_private"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:descriptionText="@string/settings_privacy_content_tour_private_checkbox_description"
                    app:labelText="@string/settings_privacy_content_tour_private_checkbox"/>
                <de.komoot.android.feature.appsettings.ui.RadioItemSelector
                    android:id="@+id/settings_privacy_tour_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:descriptionText="@string/settings_privacy_content_tour_friend_checkbox_description"
                    app:labelText="@string/settings_privacy_content_tour_friend_checkbox"/>
                <de.komoot.android.feature.appsettings.ui.RadioItemSelector
                    android:id="@+id/settings_privacy_tour_public"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:descriptionText="@string/settings_privacy_content_tour_public_checkbox_description"
                    app:labelText="@string/settings_privacy_content_tour_public_checkbox"/>
            </de.komoot.android.feature.appsettings.ui.RadioGroupContainer>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/surface_fill_primary_default"
            android:padding="@dimen/default_margin_and_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_section_padding">
            <TextView
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_privacy_content_collections_header"
                android:fontFamily="?attr/fontBold"/>
            <TextView
                android:textSize="18sp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_privacy_content_collections_header_subtitle"/>
            <de.komoot.android.feature.appsettings.ui.RadioGroupContainer
                android:id="@+id/settings_privacy_collections_visibility_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.komoot.android.feature.appsettings.ui.RadioItemSelector
                    android:id="@+id/settings_privacy_collections_private"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:descriptionText="@string/settings_privacy_content_collections_private_checkbox_description"
                    app:labelText="@string/settings_privacy_content_tour_private_checkbox"/>
                <de.komoot.android.feature.appsettings.ui.RadioItemSelector
                    android:id="@+id/settings_privacy_collections_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:descriptionText="@string/settings_privacy_content_collections_friend_checkbox_description"
                    app:labelText="@string/settings_privacy_content_tour_friend_checkbox"/>
                <de.komoot.android.feature.appsettings.ui.RadioItemSelector
                    android:id="@+id/settings_privacy_collections_public"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:descriptionText="@string/settings_privacy_content_collections_public_checkbox_description"
                    app:labelText="@string/settings_privacy_content_tour_public_checkbox"/>
            </de.komoot.android.feature.appsettings.ui.RadioGroupContainer>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/surface_fill_primary_default"
            android:padding="@dimen/default_margin_and_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_section_padding">
            <TextView
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_privacy_content_highlights_header"
                android:fontFamily="?attr/fontBold"/>
            <TextView
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_privacy_content_highlights_header_subtitle"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
