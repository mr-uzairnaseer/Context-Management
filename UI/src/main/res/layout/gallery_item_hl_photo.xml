<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hl_page_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/white"/>
    <ImageView
        android:id="@+id/hl_page_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="start|bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/hl_page_check"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hl_create_wizard_add_to_highlight"
            android:layout_weight="1"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/hl_page_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginEnd="16dp"/>
    </LinearLayout>
</FrameLayout>
