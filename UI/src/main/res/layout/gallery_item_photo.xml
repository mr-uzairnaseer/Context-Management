<?xml version="1.0" encoding="utf-8"?>
<de.komoot.android.view.FixedAspectRatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:aspectRatioHeight="1"
    app:aspectRatioWidth="1">
    <ImageView
        android:id="@+id/imageViewPhoto"
        android:background="@drawable/background_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"/>
    <ImageView
        android:layout_gravity="end|top"
        android:id="@+id/imageViewCheck"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="0x7f080a8c"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_gravity="start|bottom"
        android:id="@+id/cover_photo"
        android:background="@drawable/bg_muted_rounded_4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="@string/image_select_cover_photo"
        android:backgroundTint="@color/black_60p"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"/>
</de.komoot.android.view.FixedAspectRatioFrameLayout>
