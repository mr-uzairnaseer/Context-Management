<?xml version="1.0" encoding="utf-8"?>
<de.komoot.android.view.FixedAspectRatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:aspectRatioHeight="9"
    app:aspectRatioWidth="16">
    <ImageView
        android:id="@+id/cover_16x9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="end|bottom"
        android:layout_gravity="bottom"
        android:id="@+id/attribution"
        android:background="@drawable/gradient_vertical_dark_alpha0_dark_alpha50"
        android:paddingLeft="@dimen/default_margin_and_padding"
        android:paddingRight="@dimen/default_margin_and_padding"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:fontFamily="?attr/fontRegular"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding"/>
</de.komoot.android.view.FixedAspectRatioFrameLayout>
