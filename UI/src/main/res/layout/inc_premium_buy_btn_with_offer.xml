<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/premium_buy_old_price_comms"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_and_padding"
        android:layout_marginStart="@dimen/default_margin_and_padding"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/no_offer_container"
        android:paddingBottom="8dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_and_padding">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/price_container"
            android:background="@drawable/btn_round_corners_36dp_hero_green_white_ripple_states"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="88dp"
            android:layout_marginStart="14sp"
            android:elevation="0dp">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="?attr/fontBold"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/frequency"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="?attr/fontRegular"/>
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center_vertical"
            android:id="@+id/billed_annually"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="32dp"
            android:text="@string/premium_buy_billed_annually"
            android:layout_weight="1"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/upgrade_container"
        android:background="@drawable/bg_ripple_on_light"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding"
        android:outlineProvider="bounds"
        app:layout_constraintTop_toBottomOf="@+id/premium_btn_mark">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/offer_expires"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="?attr/fontBold"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/upgrade"
            android:background="0x7f080650"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:text="@string/premium_buy_offer_offer"
            android:fontFamily="?attr/fontBold"
            android:backgroundTint="@color/offer"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/upgrade_buy"
            android:background="@drawable/btn_round_corners_16dp_hero_green_white_ripple_states"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:baselineAligned="true"
            android:minHeight="36dp">
            <TextView
                android:textSize="24sp"
                android:textColor="@color/white"
                android:id="@+id/upgrade_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="?attr/fontBold"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:id="@+id/upgrade_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="?attr/fontBold"/>
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:id="@+id/upgrade_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="?attr/fontRegular"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/container_sales_campaign"
        android:background="@drawable/bg_ripple_on_light"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding"
        android:outlineProvider="bounds"
        app:layout_constraintTop_toBottomOf="@+id/premium_btn_mark">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/textview_offer_end"
            android:background="0x7f080650"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/shop_premium_sales_offer_ends"
            android:fontFamily="?attr/fontBold"
            android:backgroundTint="@color/primary_on_dark"/>
        <LinearLayout
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:baselineAligned="true"
            android:minHeight="36dp">
            <TextView
                android:textSize="24sp"
                android:textColor="@color/black"
                android:id="@+id/textview_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="?attr/fontBold"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/textview_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="?attr/fontBold"/>
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_whisper"
            android:id="@+id/textview_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="?attr/fontRegular"/>
        <Button
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/button_get_premium"
            android:background="@drawable/btn_hero_green_c8_states"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:text="@string/shop_premium_sales_offer_cta"
            android:textAllCaps="false"
            android:fontFamily="?attr/fontBold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/more_container"
        android:background="@drawable/bg_ripple_on_light"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding"
        android:outlineProvider="bounds">
        <TextView
            android:textSize="20sp"
            android:textColor="@color/primary"
            android:gravity="center_vertical"
            android:id="@+id/more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/shop_discover_more"
            android:layout_weight="1"
            android:fontFamily="?attr/fontBold"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/more_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/primary"/>
    </LinearLayout>
</LinearLayout>
