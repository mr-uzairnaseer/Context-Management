<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_gradient_cta"
        android:background="@color/surface_fill_primary_default"
        android:layout_width="match_parent"
        android:layout_height="12dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_cta"
        android:background="@color/surface_fill_primary_default"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:baselineAligned="false">
        <FrameLayout
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <Button
                android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Bold"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:id="@+id/button_offer"
                android:background="@drawable/btn_primary_rounded_16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/collections_sponsored_offer"
                android:maxLines="1"
                android:layout_marginStart="@dimen/default_margin_and_padding"
                android:layout_marginEnd="8dp"/>
        </FrameLayout>
        <include
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            layout="@layout/layout_collection_button_website"/>
        <include
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            layout="@layout/layout_collection_button_call"/>
    </LinearLayout>
</LinearLayout>
