<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1080px"
    android:layout_height="1920px">
    <ImageView
        android:orientation="vertical"
        android:id="@+id/instagram_background_story"
        android:background="@color/instagram_background_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/instagram_background_overlay_black"
        android:background="@color/black_50p"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_gravity="start|bottom"
        android:orientation="horizontal"
        android:id="@+id/instagram_device_attribution_story"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">
        <TextView
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/instagram_device_name_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"/>
    </LinearLayout>
</FrameLayout>
