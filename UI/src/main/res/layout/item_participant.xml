<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/layout_friend_item"
    android:background="@drawable/list_item_background_states"
    android:layout_width="match_parent"
    android:layout_height="56dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_participant_image_view"
        android:layout_width="@dimen/avatar_36"
        android:layout_height="@dimen/avatar_36"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        app:riv_oval="true"/>
    <de.komoot.android.widget.UsernameTextView
        android:textSize="19sp"
        android:typeface="normal"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:id="@+id/item_participant_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:layout_weight="1"
        android:fontFamily="?attr/fontRegular"/>
    <de.komoot.android.ui.invitation.view.ParticipantToggleView
        android:id="@+id/item_participant_toggle_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding"/>
</LinearLayout>
