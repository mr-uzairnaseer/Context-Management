<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/racTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="?attr/fontBold"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/racCB"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/racMsgTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/racTitleTv"
        android:fontFamily="?attr/fontRegular"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/racCB"/>
    <RadioButton
        android:id="@+id/racCB"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/racTitleTv"
        android:layout_marginEnd="24dp"
        android:layout_alignParentEnd="true"/>
    <View
        android:background="@drawable/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/racMsgTv"/>
</RelativeLayout>
