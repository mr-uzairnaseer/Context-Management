<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_invite_peers_link_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/activity_invite_link_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_link_in_blue_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_invite_link_main_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/secondary"
        android:id="@+id/activity_invite_link_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/participant_get_link_title"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_invite_link_description_text"
        app:layout_constraintStart_toEndOf="@+id/activity_invite_link_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/activity_invite_link_description_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/activity_invite_link_main_text"
        app:layout_constraintTop_toBottomOf="@+id/activity_invite_link_main_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>
