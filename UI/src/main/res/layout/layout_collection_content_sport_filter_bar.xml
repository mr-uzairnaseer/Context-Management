<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/psfb_base_row_container_ll"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageView
            android:id="@+id/psfb_selected_sport_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/default_margin_and_padding"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_underline"
            android:id="@+id/textview_sport_chooser_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="?attr/fontBold"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/psfb_selected_sport_icon_iv"/>
    </RelativeLayout>
    <de.komoot.android.ui.planning.view.SportChooserView
        android:id="@+id/psfb_expanend_row_container_fl"
        android:background="@color/theme_control_normal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:activeSportIconTint="@color/black"
        app:activeSportItemBackground="@drawable/bg_circle_white"
        app:inactiveSportIconTint="@color/white"
        app:inactiveSportItemBackground="@drawable/btn_theme_control_circle_states"/>
</LinearLayout>
