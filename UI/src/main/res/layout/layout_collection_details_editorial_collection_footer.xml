<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_collection_details_footer"
    android:background="@color/canvas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/suggested_collections_container_ll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Komoot.Theme2.Heading04Medium"
            android:textColor="@color/text_primary"
            android:gravity="bottom"
            android:id="@+id/textView_header_related_collections"
            android:paddingTop="32dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/collection_info_other_collections"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_related_collections"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Space
        android:id="@+id/view_space_holder_cta"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</LinearLayout>
