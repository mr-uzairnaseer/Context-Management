<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/canvas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/premium_pc_hook_divider"
        android:background="@color/background_green_grey_dark"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:id="@+id/premium_pc_hook_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/premium_hook_personal_collections"
        android:layout_below="@+id/premium_pc_hook_divider"
        android:fontFamily="?attr/fontRegular"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:gravity="center_vertical"
        android:id="@+id/premium_pc_hook_btn"
        android:background="@drawable/bg_transparent_with_pressable_text_states"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:text="@string/premium_hook_learn_more_btn"
        android:layout_below="@+id/premium_pc_hook_text"
        android:textAllCaps="true"
        android:fontFamily="?attr/fontBold"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:elevation="0dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:src="@drawable/logo_premium_short_small"
        android:layout_alignBottom="@+id/premium_pc_hook_btn"
        android:layout_marginEnd="@dimen/default_margin_and_padding"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
