<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.percentlayout.widget.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout_sub_title_image"
            app:layout_aspectRatio="121.9971%"
            app:layout_widthPercent="100%">
            <ImageView
                android:id="@+id/imageview_top_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/gradient_vertical_dark_alpha0_dark_alpha50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <de.komoot.android.widget.UsernameTextView
                    android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label05Medium"
                    android:textColor="@color/white"
                    android:gravity="bottom|right"
                    android:id="@+id/textview_photo_attribution"
                    android:paddingLeft="@dimen/default_margin_and_padding"
                    android:paddingRight="@dimen/default_margin_and_padding"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingStart="@dimen/default_margin_and_padding"
                    android:paddingEnd="@dimen/default_margin_and_padding"/>
                <View
                    android:background="@drawable/rounded_corner_top_surface_primary_default"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
            </LinearLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/textview_change_cover"
                android:background="@drawable/bg_black_60p_rounded"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/collection_edit_change_cover_label"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textAllCaps="true"
                android:paddingStart="@dimen/default_margin_and_padding"
                android:paddingEnd="@dimen/default_margin_and_padding"/>
        </RelativeLayout>
    </androidx.percentlayout.widget.PercentFrameLayout>
    <de.komoot.android.view.composition.FloatLabelLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding"
        app:floatLabelHint="@string/ccd_name_input_hint"
        app:floatLabelTextAppearance="@style/TextAppearance.Komoot.FloatLabel">
        <EditText
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/text_secondary"
            android:id="@+id/edittext_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ccd_name_input_hint"
            android:inputType="textAutoCorrect"
            android:fontFamily="?attr/fontRegular"/>
    </de.komoot.android.view.composition.FloatLabelLayout>
    <de.komoot.android.view.composition.FloatLabelLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_and_padding"
        app:floatLabelHint="@string/ccd_descritption_hint"
        app:floatLabelTextAppearance="@style/TextAppearance.Komoot.FloatLabel">
        <EditText
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/text_secondary"
            android:id="@+id/edittext_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ccd_descritption_hint"
            android:inputType="textMultiLine"
            android:fontFamily="?attr/fontRegular"/>
    </de.komoot.android.view.composition.FloatLabelLayout>
    <View
        android:background="@color/surface_fill_primary_default"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:gravity="start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="@string/collection_edit_header_tours_highlights"
            android:layout_weight="1"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="@dimen/default_margin_and_padding"
            android:paddingEnd="0dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_blue_states"
            android:gravity="end"
            android:id="@+id/textview_mdp_replan"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="@string/collection_edit_multiday_replan"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:fontFamily="?attr/fontRegular"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/default_margin_and_padding"/>
    </LinearLayout>
</LinearLayout>
