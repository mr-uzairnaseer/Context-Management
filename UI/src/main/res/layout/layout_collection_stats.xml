<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/canvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/background_green_grey_dark"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <TextView
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/cda_collection_stats_title"
        android:fontFamily="?attr/fontBold"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/secondary"
        android:gravity="center_vertical"
        android:id="@+id/mFilterStatsButtonTTV"
        android:background="@drawable/bg_green_grey_light_states"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/cda_collection_stats_mode_all_tours"
        android:fontFamily="?attr/fontRegular"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/cda_collection_stats_tours"
            android:layout_weight="1"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="@dimen/default_margin_and_padding"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/mToursCountTTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/mHighlightsInfoContainerLL"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/cda_collection_stats_highlights"
            android:layout_weight="1"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="@dimen/default_margin_and_padding"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/mHighlightsCountTTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/cda_collection_stats_distance"
            android:layout_weight="1"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="@dimen/default_margin_and_padding"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/mDistanceTTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/cda_collection_stats_duration"
            android:layout_weight="1"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="@dimen/default_margin_and_padding"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/mDurationTTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/cda_collection_stats_elevation"
            android:layout_weight="1"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="@dimen/default_margin_and_padding"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/mElevationTTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
    </LinearLayout>
</LinearLayout>
