<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="@style/TextAppearance.Komoot.Headline3"
        android:gravity="start|bottom"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="@string/route_information_section_comments"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding"/>
    <include
        android:id="@+id/layout_social_like_comment_btn"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        layout="@layout/layout_social_like_comment_btn"/>
    <include
        android:id="@+id/users_who_liked_divider"
        layout="@layout/divider_item"/>
    <include layout="@layout/layout_users_who_liked"/>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/section_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/section_comment_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/secondary"
            android:gravity="center_vertical"
            android:id="@+id/textview_comments_more"
            android:background="@drawable/bg_white_blue_ripple_states"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="72dp"/>
        <include layout="@layout/layout_social_add_comment"/>
    </LinearLayout>
</LinearLayout>
