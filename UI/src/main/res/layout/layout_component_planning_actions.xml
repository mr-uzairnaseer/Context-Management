<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_component_highlight_actions"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/planning_layout_cta_height">
    <androidx.legacy.widget.Space
        android:id="@+id/space_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="@dimen/default_margin_and_padding"
        android:paddingBottom="@dimen/default_margin_and_padding"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.komoot.android.view.AutoFitTextView
            android:enabled="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/textview_btn_primary"
            android:background="@drawable/btn_blue_states"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:maxLines="1"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="@dimen/default_margin_and_padding"
            android:layout_marginEnd="8dp"
            android:elevation="3dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:id="@+id/layout_button_bookmark"
            android:background="@drawable/btn_white_states"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:minHeight="36dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/default_margin_and_padding"
            android:elevation="3dp">
            <ImageView
                android:id="@+id/imageview_bookmark_icon"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_bookmark_outline_grey"
                android:scaleType="centerInside"
                android:layout_marginEnd="8dp"/>
            <de.komoot.android.view.AutoFitTextView
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:id="@+id/autofittextview_bookmark_text"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/highlight_info_button_bookmark"
                android:maxLines="1"
                android:textAllCaps="true"
                android:fontFamily="?attr/fontRegular"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
