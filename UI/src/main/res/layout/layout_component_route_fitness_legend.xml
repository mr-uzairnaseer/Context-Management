<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:gravity="start"
        android:id="@+id/textview_legend_fitness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/route_information_legend_fitness"
        android:layout_centerVertical="true"
        android:fontFamily="?attr/fontBold"
        android:layout_marginStart="@dimen/std_border_left"
        android:layout_marginEnd="@dimen/std_border_right"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/imageView_level_fitness"
        android:layout_width="34dp"
        android:layout_height="10dp"
        android:src="0x7f080aec"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/std_border_left"
        android:layout_marginEnd="@dimen/std_border_right"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
