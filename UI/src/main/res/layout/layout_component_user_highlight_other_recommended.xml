<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/surface_fill_primary_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/divider_item"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Komoot.Theme2.Heading04Medium"
        android:textColor="@color/text_primary"
        android:gravity="bottom"
        android:id="@+id/textview_seasonality_title"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:text="@string/highlight_info_section_title_osh"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_osh"
        android:visibility="visible"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="216dp"/>
</LinearLayout>
