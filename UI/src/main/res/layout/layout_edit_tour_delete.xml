<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/layout_cell_delete"
    android:background="@drawable/list_item_background_states"
    android:paddingLeft="@dimen/std_border_left"
    android:paddingRight="@dimen/std_border_right"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingStart="@dimen/std_border_left"
    android:paddingEnd="@dimen/std_border_right">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_delete"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="@string/after_tour_delete_tour"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_weight="1"
        android:fontFamily="?attr/fontRegular"
        android:layout_marginStart="32dp"/>
</LinearLayout>
