<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/layout_sport"
    android:background="@drawable/list_item_background_states"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_alignParentTop="true">
    <ImageView
        android:id="@+id/etwpml_participants_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="0x7f08096d"
        android:scaleType="centerInside"
        android:layout_marginStart="20dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Medium"
        android:ellipsize="end"
        android:id="@+id/etwpml_participants_text"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginStart="20dp"/>
</LinearLayout>
