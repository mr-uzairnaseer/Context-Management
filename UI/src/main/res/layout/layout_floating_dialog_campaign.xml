<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_floating_dialog_campaign"
    android:paddingTop="8dp"
    android:paddingBottom="20dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="@dimen/phone_match_parent_tablet_600dp"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">
    <View
        android:layout_gravity="end|bottom"
        android:id="@+id/iv_triangle"
        android:background="0x7f080dab"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_marginBottom="-20dp"
        android:elevation="6dp"
        android:backgroundTint="@color/tertiary"
        android:outlineProvider="background"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout_campaign_content"
        android:background="@drawable/bg_update_popup"
        android:paddingBottom="@dimen/default_margin_and_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="600dp"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:elevation="6dp"
        android:outlineProvider="background">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:src="@drawable/ic_region_world"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"/>
        <ImageView
            android:id="@+id/iv_close"
            android:background="@drawable/bg_ripple_on_dark"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"/>
        <TextView
            android:textSize="24sp"
            android:textColor="@color/white"
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/campaign_dialog_welcome_offer_title"
            android:fontFamily="?attr/fontBold"
            android:layout_marginEnd="@dimen/default_margin_and_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_icon"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/tv_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="?attr/fontRegular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
        <Button
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/textview_button_get"
            android:background="@drawable/btn_round_corners_6dp_primary_on_dark_states"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:text="@string/world_pack_sales_offer_banner_cta"
            android:textAllCaps="false"
            android:fontFamily="?attr/fontBold"
            app:layout_constraintStart_toStartOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
