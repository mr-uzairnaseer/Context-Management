<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingBottom="20dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="@dimen/phone_match_parent_tablet_600dp"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">
    <View
        android:layout_gravity="end|bottom"
        android:id="@+id/iv_triangle"
        android:background="0x7f080dab"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_marginBottom="-20dp"
        android:elevation="6dp"
        android:backgroundTint="@color/tertiary"
        android:outlineProvider="background"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_update_popup"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="600dp"
        android:elevation="6dp"
        android:outlineProvider="background">
        <TextView
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/premium_feature_banner_live_tracking_message"
            android:fontFamily="?attr/fontBold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/premium_feature_banner_new"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_live_tracking"
            android:fontFamily="?attr/fontRegular"
            app:layout_constraintStart_toStartOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/tv_text"
            app:layout_constraintTop_toBottomOf="@+id/tv_text">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_open"
                android:background="@drawable/btn_primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="32dp"
                android:text="@string/premium_feature_banner_learn_more"
                android:maxLines="1"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:fontFamily="?attr/fontRegular"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:autoSizeMaxTextSize="16sp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_later"
                android:background="@drawable/bg_transparent_with_pressable_text_states"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="32dp"
                android:text="@string/premium_feature_banner_dismiss"
                android:maxLines="1"
                android:textAllCaps="true"
                android:fontFamily="?attr/fontRegular"
                android:layout_marginStart="8dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="11sp"
                android:paddingHorizontal="@dimen/default_margin_and_padding"
                android:paddingVertical="8dp"
                android:autoSizeMaxTextSize="16sp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
