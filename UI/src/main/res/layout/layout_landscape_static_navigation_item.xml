<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/layout_landscape_static_navigation_item"
    android:background="@drawable/background_navigation_item_states"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/imageview_direction_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="12dp"/>
        <de.komoot.android.view.AutoFitTextView
            android:textSize="36sp"
            android:textColor="@android:color/white"
            android:gravity="start|center_vertical"
            android:id="@+id/textview_distance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:singleLine="true"
            style="@style/TextAppearance.Komoot.Theme2.Heading01Medium"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <de.komoot.android.view.AutoFitTextView
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="start|center_vertical"
            android:id="@+id/textview_street"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:singleLine="true"
            android:drawablePadding="6dp"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="0dp"/>
    </FrameLayout>
</LinearLayout>
