<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="12dp">
    <View
        android:id="@+id/view_top_shadow"
        android:background="@drawable/gradient_top_transparent_to_bottom_almost_grey_rc12dp_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pa_panel_shadow_height"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_significant_change"
        android:background="@color/white"
        android:paddingTop="@dimen/default_margin_and_padding"
        android:paddingBottom="@dimen/default_margin_and_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding">
        <TextView
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="start"
            android:id="@+id/textview_significant_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/navigation_replanning_info_significant_change_title"
            android:fontFamily="?attr/fontBold"
            app:layout_constraintBottom_toTopOf="@+id/textview_significant_message"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="start"
            android:id="@+id/textview_significant_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/navigation_replanning_info_significant_change_message"
            android:fontFamily="?attr/fontRegular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_significant_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/layout_loading_info"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/navigation_replanning_info_minor_change"
            android:fontFamily="?attr/fontRegular"/>
    </FrameLayout>
    <View
        android:id="@+id/divider_info"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <RelativeLayout
            android:id="@+id/layout_btn_cancel"
            android:background="@drawable/btn_white_bg_grey_effect_states"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="0x7f080cb0"
                    app:tint="@color/secondary"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/navigation_replanning_cancel"
                    android:fontFamily="?attr/fontBold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progressbar_timeout"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="2dp"
                android:max="100"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:progressTint="@color/secondary"
                android:progressBackgroundTint="@color/white"
                android:indeterminateTint="@android:color/white"
                style="?android:attr/progressBarStyleHorizontal"/>
        </RelativeLayout>
        <View
            android:id="@+id/view_divider_replan_off"
            android:background="@color/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/layout_btn_replanning_off"
            android:background="@drawable/btn_white_bg_grey_effect_states"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="0x7f080cb2"
                app:tint="@color/secondary"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mribb_disable_adjustment"
                android:fontFamily="?attr/fontBold"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <View
            android:id="@+id/view_divider_loading"
            android:background="@color/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/layout_loading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ProgressBar
                android:id="@+id/progressbar_loading"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminate="true"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/style1_text_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/navigation_replanning_loading"
                android:fontFamily="?attr/fontBold"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <View
            android:id="@+id/view_divider_accept"
            android:background="@color/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/layout_btn_accept_new"
            android:background="@drawable/btn_white_bg_grey_effect_states"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="0x7f080cb1"
                app:tint="@color/secondary"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/navigation_replanning_accept"
                android:fontFamily="?attr/fontBold"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
