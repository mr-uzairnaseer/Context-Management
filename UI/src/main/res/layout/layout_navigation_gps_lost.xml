<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_portrait_navigatoion_gps_lost"
    android:background="@color/surface_fill_green_default"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:minHeight="96dp">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="0x7f080b97"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textColor="@color/text_white_default"
        android:gravity="center"
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/visual_nav_gps_signal_lost"
        android:maxLines="1"
        android:lines="1"
        android:layout_centerVertical="true"
        android:layout_marginStart="72dp"
        android:layout_alignParentStart="true"
        style="@style/TextAppearance.Komoot.Theme2.Heading03Medium"/>
</RelativeLayout>
