<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.komoot.android.view.AutoFitTextView
        android:textAppearance="?attr/textAppearanceTitle"
        android:gravity="center"
        android:id="@+id/textview_header_title"
        android:layout_width="@dimen/onboarding_title_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/onboarding_title_margin_top"
        android:text="@string/favorite_sport_header_title_v2"
        android:maxLines="2"/>
    <TextView
        android:textAppearance="?attr/textAppearanceSubtitle"
        android:gravity="center"
        android:id="@+id/textview_header_text"
        android:layout_width="@dimen/onboarding_subtitle_width"
        android:layout_height="@dimen/onboarding_fav_sport_subtitle_height"
        android:layout_marginTop="@dimen/onboarding_subtitle_margin_top"
        android:layout_marginBottom="22dp"
        android:text="@string/favorite_sport_header_text_v2_inspiration"/>
</LinearLayout>
