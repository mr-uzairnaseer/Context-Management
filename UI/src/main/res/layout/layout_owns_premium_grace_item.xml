<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_white_grey_rounded_corners"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_and_padding"
        android:text="@string/premium_owns_grace_title"
        android:drawableEnd="@drawable/ic_warning"
        android:fontFamily="?attr/fontBold"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding"
        android:drawableTint="@color/warning"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/premium_owns_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/premium_owns_grace_text"
        android:fontFamily="?attr/fontRegular"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/text_blue_states"
        android:id="@+id/premium_owns_state_btn"
        android:background="@drawable/btn_borderless_on_light"
        android:padding="@dimen/default_margin_and_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/premium_owns_grace_btn"
        android:fontFamily="?attr/fontBold"/>
</LinearLayout>
