<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_move_mode"
    android:background="@color/secondary"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp">
    <ImageView
        android:id="@+id/imageview_info_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_info"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        app:tint="@color/white"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Komoot.TextDefault"
        android:textColor="@color/white"
        android:id="@+id/textview_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/textview_btn_cancel"
        android:background="@drawable/bg_blue_ripple_rounded_8dp"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:text="@string/btn_cancel"
        android:layout_below="@+id/textview_info_title"
        android:textAllCaps="true"
        android:fontFamily="?attr/fontBold"
        android:layout_marginStart="72dp"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
