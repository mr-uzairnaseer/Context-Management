<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@drawable/gradient_top_transparent_to_bottom_almost_grey_rc12dp_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pa_panel_shadow_height"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/almost_grey"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <RelativeLayout
            android:id="@+id/layout_sports_header"
            android:background="@drawable/bg_white_rounded_8dp_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rip_sports_bar_height">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_sport"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sport_hike_24"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/default_margin_and_padding"
                android:layout_alignParentStart="true"
                app:tint="@color/black"/>
            <TextView
                android:textSize="16sp"
                android:id="@+id/textview_sport_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="?attr/fontRegular"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@+id/imageview_sport"/>
            <ProgressBar
                android:id="@+id/progressbar_route_loading"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminate="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/priv_edit_button_ttv"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/secondary"
                android:gravity="center"
                android:id="@+id/priv_edit_button_ttv"
                android:background="@drawable/btn_borderless_on_light"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/pri_adjust_route"
                android:textAllCaps="true"
                android:fontFamily="?attr/fontRegular"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </FrameLayout>
    <ViewStub
        android:id="@+id/view_stub_route_info_stats"
        android:background="@color/surface_fill_primary_default"
        android:inflatedId="@+id/view_route_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/framelayout_stub"
        android:background="@color/surface_fill_primary_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/surface_fill_primary_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pa_navigate_or_save_bar_height"/>
</LinearLayout>
