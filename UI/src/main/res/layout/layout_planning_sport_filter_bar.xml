<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/psfb_base_row_container_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/planning_filter_height">
        <ImageView
            android:id="@+id/psfb_selected_sport_icon_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/default_margin_and_padding"
            app:tint="@color/text_underline"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_underline"
            android:id="@+id/textview_sport_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/planner_attribute_sport"
            android:layout_centerVertical="true"
            android:fontFamily="?attr/fontBold"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/psfb_selected_sport_icon_iv"/>
        <ImageView
            android:id="@+id/e_bike_flash_icon"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ebike_flash_grey"
            android:layout_alignTop="@+id/textview_sport_chooser_selection"
            android:layout_alignBottom="@+id/textview_sport_chooser_selection"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/textview_sport_chooser_selection"
            app:tint="@color/text_underline"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:id="@+id/textview_sport_chooser_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
        <View
            android:id="@+id/psfb_short_divider_v"
            android:background="@color/divider"
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textview_sport_attribute"/>
    </RelativeLayout>
    <de.komoot.android.ui.planning.view.SportChooserView
        android:id="@+id/psfb_expanend_row_container_fl"
        android:background="@color/theme_control_normal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:activeSportIconTint="@color/black"
        app:activeSportItemBackground="@drawable/bg_circle_white"
        app:eBikeCheckBoxLabel="@string/planning_e_bike_checkbox"
        app:inactiveSportIconTint="@color/white"
        app:inactiveSportItemBackground="@drawable/btn_theme_control_circle_states"/>
</LinearLayout>
