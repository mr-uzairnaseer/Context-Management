<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="false"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_top_drag_hint"
        android:background="@color/primary_pressed"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/layout_waypoint"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/planning_waypoints_bar_height">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/textview_wp_position"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="?attr/fontBold"
            android:layout_marginStart="8dp"/>
        <ImageButton
            android:id="@+id/imagebutton_rearrang_handle"
            android:background="@drawable/bg_hero_green_states"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="56dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_plan_rearrange"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:tint="@color/white_alpha50"
            app:tintMode="src_in"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/layout_waypoint_inner"
            android:background="@drawable/bg_black_10p_c8_white_ripple_states"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@+id/imagebutton_rearrang_handle"
            android:layout_toEndOf="@+id/textview_wp_position">
            <de.komoot.android.view.AutoFitTextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/textview_waypoint_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lines="1"
                android:fontFamily="?attr/fontRegular"
                android:layout_toStartOf="@+id/imagebutton_waypoint_delete"
                android:layout_alignParentStart="true"
                app:minTextSize="12sp"/>
            <ImageButton
                android:id="@+id/imagebutton_waypoint_delete"
                android:background="@drawable/bg_ripple_on_dark"
                android:padding="8dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete2"
                android:scaleType="centerInside"
                android:layout_alignParentEnd="true"
                app:tint="@color/white"
                app:tintMode="src_in"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view_bottom_drag_hint"
        android:background="@color/primary_pressed"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>
