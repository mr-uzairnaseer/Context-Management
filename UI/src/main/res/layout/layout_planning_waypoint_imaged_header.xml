<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_frontimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">
        <View
            android:background="@color/almost_grey"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageview_frontimage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_5_to_2"
            android:src="@drawable/placeholder_highlight"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius_top_left="12dp"
            app:riv_corner_radius_top_right="12dp"/>
        <View
            android:id="@+id/view_drag_handle"
            android:background="@drawable/bg_divider_c3dp"
            android:layout_width="24dp"
            android:layout_height="6dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Space
            android:id="@+id/space_0"
            android:layout_width="16dp"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <Button
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/button_primary"
            android:background="@drawable/btn_hero_green_c8_states"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:textAllCaps="false"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="@dimen/default_margin_and_padding"
            android:paddingEnd="@dimen/default_margin_and_padding"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/space_0"/>
        <Button
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/button_secondary"
            android:background="@drawable/btn_hero_green_c8_states"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:textAllCaps="false"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="@dimen/default_margin_and_padding"
            android:paddingEnd="@dimen/default_margin_and_padding"
            android:layout_marginStart="8dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_primary"/>
        <Space
            android:id="@+id/space_1"
            android:layout_width="8dp"
            android:layout_height="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_secondary"/>
        <Button
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:id="@+id/button_move"
            android:background="@color/surface_fill_primary_default"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:foreground="?attr/selectableItemBackground"
            android:textAllCaps="false"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/space_1"/>
        <Space
            android:id="@+id/space_2"
            android:layout_width="8dp"
            android:layout_height="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_move"/>
        <View
            android:background="@color/surface_fill_primary_default"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            app:layout_constraintTop_toBottomOf="@+id/imageview_frontimage"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/surface_fill_primary_default"
        android:paddingTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:orientation="horizontal"
            android:id="@+id/radiogroup_plan"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <RadioButton
                android:textSize="14sp"
                android:textColor="@color/text_underline"
                android:id="@+id/radiobutton_primary"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:textAllCaps="false"
                android:fontFamily="?attr/fontRegular"/>
            <RadioButton
                android:textSize="14sp"
                android:textColor="@color/text_underline"
                android:id="@+id/radiobutton_secondary"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:textAllCaps="false"
                android:fontFamily="?attr/fontRegular"
                android:layout_marginStart="16dp"/>
        </RadioGroup>
        <FrameLayout
            android:id="@+id/view_vertical_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            app:layout_constraintStart_toEndOf="@+id/radiogroup_plan"
            app:layout_constraintTop_toTopOf="@+id/radiogroup_plan">
            <View
                android:background="@drawable/bg_divider_c1_5dp"
                android:layout_width="3dp"
                android:layout_height="36dp"/>
        </FrameLayout>
        <CheckBox
            android:textSize="14sp"
            android:textColor="@color/text_underline"
            android:id="@+id/checkbox_plan_ongrid"
            android:background="@color/surface_fill_primary_default"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:checked="true"
            android:text="@string/map_marker_route"
            android:maxLines="2"
            android:lineSpacingExtra="-3sp"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_vertical_divider"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
            android:id="@+id/button_delete"
            android:background="@drawable/btn_white_c8_hero_green_border_with_deactived_states"
            android:layout_width="56dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_delete"
            android:layout_marginEnd="@dimen/std_border_right"
            android:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/tint_primary_deactivated"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
