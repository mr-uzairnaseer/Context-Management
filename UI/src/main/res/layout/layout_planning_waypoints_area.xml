<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/framelayout_first_waypoint_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/layout_collapse_waypoints_top"
        android:background="@drawable/bg_hero_green_states"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/planning_waypoints_expander_height">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/textview_collapse_waypoints_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_centerVertical="true"
            android:fontFamily="?attr/fontBold"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="2dp"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_unfold_less"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textview_collapse_waypoints_top"
            app:tint="@color/white"
            app:tintMode="src_in"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_expand_waypoints_bar"
        android:background="@drawable/bg_hero_green_states"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/planning_waypoints_expander_height">
        <ImageView
            android:id="@+id/imageview_more_waypoints_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f080cea"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/default_margin_and_padding"
            android:layout_marginEnd="0dp"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/textview_more_waypoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_centerVertical="true"
            android:fontFamily="?attr/fontBold"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/imageview_more_waypoints_dots"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_unfold_more"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textview_more_waypoints"
            app:tint="@color/white"
            app:tintMode="src_in"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearlayout_more_waypoints"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/layout_collapse_waypoints_bottom"
        android:background="@drawable/bg_hero_green_states"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/planning_waypoints_expander_height">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/textview_collapse_waypoints_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_centerVertical="true"
            android:fontFamily="?attr/fontBold"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="2dp"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_unfold_less"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textview_collapse_waypoints_bottom"
            app:tint="@color/white"
            app:tintMode="src_in"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/framelayout_last_waypoint_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <de.komoot.android.ui.planning.view.PlanningWaypointSummaryBarView
        android:id="@+id/waypoints_summary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
