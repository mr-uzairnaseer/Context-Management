<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/layout_base_bar"
        android:background="@drawable/bg_pressable_text_states"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding">
        <ImageView
            android:id="@+id/imageview_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_filter_difficulty"
            android:layout_centerVertical="true"
            android:layout_marginEnd="32dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_underline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiday_tech_difficulty_title"
            android:layout_centerVertical="true"
            android:fontFamily="?attr/fontBold"
            android:layout_toEndOf="@+id/imageview_icon"/>
        <ImageView
            android:id="@+id/imageView_difficulty_small"
            android:layout_width="48dp"
            android:layout_height="14dp"
            android:src="0x7f080aec"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/std_border_left"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_expand_bar"
        android:background="@color/theme_control_normal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding">
        <ImageView
            android:id="@+id/imageView_difficulty_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f080aef"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/imageview_help"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_help_outlined"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/imageView_difficulty_large"
            app:tint="@color/grey_400"/>
        <ImageButton
            android:id="@+id/imagebutton_minus"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_minus_darktheme_states"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/imagebutton_plus"/>
        <ImageButton
            android:id="@+id/imagebutton_plus"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_plus_darktheme_states"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
