<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_route_elevation_profile_page_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/planning_route_track_info_pager_item_height">
    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="@dimen/elevation_profile_min_height"
        android:fillViewport="true"
        android:layout_marginStart="@dimen/default_margin_and_padding">
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/route_elevation_stats_compose_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </HorizontalScrollView>
    <de.komoot.android.view.TouringElevationProfileView
        android:id="@+id/elevationview_planning"
        android:paddingLeft="@dimen/list_item_side_padding"
        android:paddingTop="@dimen/elevation_profile_selector_padding"
        android:paddingRight="@dimen/list_item_side_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"/>
</LinearLayout>
