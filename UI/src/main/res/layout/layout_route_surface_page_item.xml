<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_route_surface_page_item"
    android:background="@color/surface_fill_primary_default"
    android:layout_width="match_parent"
    android:layout_height="@dimen/planning_route_track_info_pager_item_height">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:gravity="center_vertical"
        android:id="@+id/textview_footer_info"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:fontFamily="?attr/fontRegular"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/planning_route_track_info_content_view">
        <de.komoot.android.view.MultiBarDiagramView
            android:layout_gravity="center_vertical"
            android:id="@+id/view_legend_ways"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/list_item_side_padding"
            android:layout_marginRight="@dimen/list_item_side_padding"/>
        <ImageView
            android:id="@+id/imageview_slider"
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:src="0x7f08118f"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
</LinearLayout>
