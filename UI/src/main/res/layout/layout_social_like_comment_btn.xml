<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/layout_like_comment_button"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:baselineAligned="false">
    <FrameLayout
        android:id="@+id/button_like"
        android:background="@drawable/background_frame_r8dp_grey_ripple"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:minWidth="140dp"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:elevation="0dp">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageview_bookmark_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tour_like_selector"
                android:scaleType="centerInside"
                android:layout_marginEnd="8dp"/>
            <de.komoot.android.view.AutoFitTextView
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:id="@+id/button_like_text"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:maxLines="1"
                android:singleLine="true"
                android:fontFamily="?attr/fontRegular"
                app:minTextSize="12dp"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/button_comment"
        android:background="@drawable/background_frame_r8dp_grey_ripple"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:minWidth="140dp"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:elevation="0dp">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/button_comment_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="0x7f080f62"
                android:scaleType="centerInside"
                android:layout_marginEnd="8dp"/>
            <de.komoot.android.view.AutoFitTextView
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:id="@+id/button_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:maxLines="1"
                android:fontFamily="?attr/fontRegular"
                app:minTextSize="12dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
