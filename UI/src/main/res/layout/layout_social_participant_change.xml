<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/surface_fill_primary_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:id="@+id/textview_title"
        android:padding="@dimen/default_margin_and_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="?attr/fontRegular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/layout_btn_invite_join"
        android:background="@drawable/btn_white_c8_grey_border_ripple"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_title">
        <de.komoot.android.view.AutoFitTextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tour_information_button_invite_declined"
            android:maxLines="1"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_privacy_decline"
            android:fontFamily="?attr/fontBold"
            app:minTextSize="10sp"/>
    </FrameLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/secondary"
        android:gravity="center_vertical"
        android:id="@+id/textview_btn_change"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="@string/tour_information_button_invite_change"
        android:fontFamily="?attr/fontBold"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
