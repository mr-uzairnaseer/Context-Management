<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_participant_join"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageview_creator"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true"/>
    <de.komoot.android.widget.UsernameTextView
        android:textSize="15sp"
        android:textColor="@color/black"
        android:id="@+id/textview_join_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="?attr/fontRegular"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="@dimen/default_margin_and_padding"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_creator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageview_creator"/>
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/layout_btn_invite_join"
        android:background="@drawable/btn_white_c8_grey_border_ripple"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_creator">
        <de.komoot.android.view.AutoFitTextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:id="@+id/textview_btn_accept"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tour_information_button_invite_accept"
            android:maxLines="1"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_privacy_accept"
            android:fontFamily="?attr/fontBold"
            app:minTextSize="10sp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/layout_btn_invite_decline"
        android:background="@drawable/btn_white_c8_grey_border_ripple"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/default_margin_and_padding"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout_btn_invite_join"
        app:layout_constraintTop_toBottomOf="@+id/imageview_creator">
        <de.komoot.android.view.AutoFitTextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:id="@+id/textview_btn_decline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tour_information_button_invite_discard"
            android:maxLines="1"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_privacy_decline"
            android:fontFamily="?attr/fontBold"
            app:minTextSize="10sp"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
