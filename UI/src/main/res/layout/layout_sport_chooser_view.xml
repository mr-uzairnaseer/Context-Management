<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/theme_control_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/scv_recyclerview_rv"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="always"/>
    <CheckBox
        android:theme="@style/ThemeOverlay.KmtTheme.Dark"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/scv_e_bike_checkbox"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:drawablePadding="8dp"
        android:drawableEnd="@drawable/ic_ebike_flash_small_white"
        android:layout_marginStart="8dp"/>
</LinearLayout>
