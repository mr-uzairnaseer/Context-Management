<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_base_bar"
        android:background="@drawable/bg_pressable_text_states"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_filter_date"
            android:layout_marginEnd="32dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_underline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiday_tour_duration_filter"
            android:fontFamily="?attr/fontBold"/>
        <de.komoot.android.view.AutoFitTextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="end|center_vertical"
            android:id="@+id/textview_duration_value1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/multiday_tour_duration_days"
            android:lines="1"
            android:layout_weight="1"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="@dimen/default_margin_and_padding"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/layout_expand_bar"
        android:background="@color/theme_control_normal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding">
        <TextView
            android:textSize="38sp"
            android:textColor="@color/white"
            android:id="@+id/textview_duration_value2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiday_tour_duration_days"
            android:layout_centerVertical="true"
            android:fontFamily="?attr/fontBold"
            android:layout_alignParentStart="true"/>
        <ImageButton
            android:id="@+id/imagebutton_minus"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_minus_darktheme_states"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/imagebutton_plus"/>
        <ImageButton
            android:id="@+id/imagebutton_plus"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_plus_darktheme_states"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
