<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <ImageView
        android:id="@+id/imageview_stats_time"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:src="0x7f080fa4"
        android:layout_marginEnd="@dimen/tour_stat_icon_margin_right"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:id="@+id/textview_stats_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="?attr/fontBold"
        android:layout_marginEnd="2dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:id="@+id/textview_stats_time_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="?attr/fontRegular"
        android:layout_marginEnd="@dimen/tour_stat_item_margin_right"/>
    <ImageView
        android:id="@+id/imageview_stats_distance"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:src="0x7f080f9f"
        android:layout_marginEnd="@dimen/tour_stat_icon_margin_right"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:id="@+id/textview_stats_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="?attr/fontBold"
        android:layout_marginEnd="2dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:id="@+id/textview_stats_distance_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="?attr/fontRegular"
        android:layout_marginEnd="@dimen/tour_stat_item_margin_right"/>
    <ImageView
        android:id="@+id/imageview_stats_average_speed"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:src="0x7f080fa3"
        android:layout_marginEnd="@dimen/tour_stat_icon_margin_right"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:id="@+id/textview_stats_average_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="?attr/fontBold"
        android:layout_marginEnd="2dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:id="@+id/textview_stats_average_speed_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="?attr/fontRegular"
        android:layout_marginEnd="@dimen/tour_stat_item_margin_right"/>
    <ImageView
        android:id="@+id/imageview_stats_uphill"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:src="0x7f080fa5"
        android:layout_marginEnd="@dimen/tour_stat_icon_margin_right"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:id="@+id/textview_stats_uphill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="?attr/fontBold"
        android:layout_marginEnd="2dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:id="@+id/textview_stats_uphill_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="?attr/fontRegular"
        android:layout_marginEnd="@dimen/tour_stat_item_margin_right"/>
    <ImageView
        android:id="@+id/imageview_stats_downhill"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:src="0x7f080fa0"
        android:layout_marginEnd="@dimen/tour_stat_icon_margin_right"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:id="@+id/textview_stats_downhill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="?attr/fontBold"
        android:layout_marginEnd="2dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:id="@+id/textview_stats_downhill_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="?attr/fontRegular"/>
</LinearLayout>
