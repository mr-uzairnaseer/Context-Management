<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageview_ascent_descent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_tour_stats_ascent"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/main_grey"
        android:id="@+id/textview_ascent_descent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_tour_stats_dropdown"
        android:drawablePadding="2dp"
        android:fontFamily="?attr/fontBold"/>
</merge>
