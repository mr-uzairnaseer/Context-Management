<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="24dp">
    <TextView
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:gravity="center_vertical"
        android:id="@+id/showing_original_note_ttv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/uhtli_showing_original"
        android:maxLines="1"
        android:fontFamily="?attr/fontRegular"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/translation_attribution_container_ll"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:gravity="center_vertical"
            android:id="@+id/translation_attribution_text_ttv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/uhtli_translated_by"
            android:maxLines="1"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:id="@+id/translation_attribution_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_gravity="center_vertical"
        android:background="@color/divider"
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:gravity="center_vertical"
        android:id="@+id/toggle_original_translation_button_ttv"
        android:background="@drawable/bg_transparent_with_pressable_text_states"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:fontFamily="?attr/fontRegular"/>
</LinearLayout>
