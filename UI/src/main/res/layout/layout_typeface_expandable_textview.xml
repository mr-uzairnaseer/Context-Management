<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:animationCache="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <TextView
        android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Medium"
        android:textColor="@color/black"
        android:id="@+id/tetvl_text_ttv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label02Bold"
        android:textColor="@color/text_orange_default"
        android:id="@+id/tetvl_show_more_button_ttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/tetvl_show_more"/>
</LinearLayout>
