<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/bg_pressable_text_states"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingStart="@dimen/default_margin_and_padding"
    android:paddingEnd="@dimen/default_margin_and_padding">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_filter_location"
        android:layout_marginEnd="32dp"/>
    <TextView
        android:textSize="18sp"
        android:textColor="@color/text_underline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tour_list_filter_location"
        android:fontFamily="?attr/fontBold"/>
    <de.komoot.android.view.AutoFitTextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="end|center_vertical"
        android:id="@+id/textview_location_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/chcfa_region_filter_default"
        android:lines="1"
        android:layout_weight="1"
        android:fontFamily="?attr/fontRegular"
        android:layout_marginStart="@dimen/default_margin_and_padding"/>
    <ProgressBar
        android:id="@+id/progressbar_location"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:indeterminate="true"/>
</LinearLayout>
