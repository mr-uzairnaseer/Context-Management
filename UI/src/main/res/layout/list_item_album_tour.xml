<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/layout_album_tour_list_item"
    android:background="@drawable/list_item_background_states"
    android:paddingTop="@dimen/default_margin_and_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="74dp"
    android:paddingStart="@dimen/default_margin_and_padding"
    android:paddingEnd="0dp">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tour_map"
            android:layout_width="@dimen/tour_list_map_size"
            android:layout_height="@dimen/tour_list_map_size"
            android:layout_marginBottom="14dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/imageview_sport"
            android:background="@drawable/bg_round_black"
            android:padding="4dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="fitCenter"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_and_padding">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:singleLine="false"
            android:fontFamily="?attr/fontBold"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
        <include
            android:id="@+id/layout_stats_includer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_marginEnd="@dimen/default_margin_and_padding"
            layout="@layout/layout_generic_tour_stats"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_marginEnd="@dimen/default_margin_and_padding">
            <TextView
                android:textSize="13sp"
                android:textColor="@color/text_underline"
                android:id="@+id/textview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="?attr/fontRegular"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@color/text_underline"
                android:id="@+id/textview_region_separator"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢"
                android:maxLines="1"
                android:fontFamily="?attr/fontRegular"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@color/text_underline"
                android:ellipsize="end"
                android:id="@+id/textview_region"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="1"
                android:fontFamily="?attr/fontRegular"/>
            <ProgressBar
                android:id="@+id/viewOfflining"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:indeterminate="true"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/album_tour_visibility_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_lock"
                android:layout_marginStart="@dimen/default_margin_and_padding"
                app:tint="@color/main_grey"/>
        </LinearLayout>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            layout="@layout/divider_line_horizontal_1dp"/>
    </LinearLayout>
</LinearLayout>
