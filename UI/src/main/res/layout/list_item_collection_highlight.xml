<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_list_item_collection_highlight"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/clickable_surface_corner_12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <androidx.percentlayout.widget.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <ImageView
                android:id="@+id/imageView_higlight"
                android:background="@drawable/rounded_corner_12dp"
                android:src="@drawable/placeholder_highlight"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                app:layout_aspectRatio="138.9984%"
                app:layout_widthPercent="100%"/>
        </androidx.percentlayout.widget.PercentFrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_sport_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="2dp"
                android:scaleType="centerInside"
                android:layout_alignTop="@+id/textView_highlight_name"
                android:layout_alignBottom="@+id/textView_highlight_name"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.Theme2.Heading04Medium"
                android:textColor="@color/text_primary"
                android:gravity="center_vertical"
                android:id="@+id/textView_highlight_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/imageView_sport_icon"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label03Medium"
                android:textColor="@color/text_secondary"
                android:id="@+id/textView_highlight_sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_highlight_name"
                android:layout_alignStart="@+id/textView_highlight_name"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
