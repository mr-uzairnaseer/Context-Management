<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:id="@+id/layout_current_position_item"
    android:background="@drawable/list_item_background_states"
    android:paddingLeft="@dimen/list_item_side_padding"
    android:paddingRight="@dimen/list_item_side_padding"
    android:layout_width="match_parent"
    android:layout_height="56dp">
    <ImageView
        android:id="@+id/imageview_search_location_map"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="0x7f080db9"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:id="@+id/textview_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="@string/spot_search_acquiring_location_title"
        android:layout_toRightOf="@+id/imageview_search_location_map"
        android:layout_centerVertical="true"
        android:fontFamily="?attr/fontRegular"
        android:layout_marginStart="32dp"/>
</RelativeLayout>
