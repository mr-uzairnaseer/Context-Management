<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@color/disabled_grey"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="@dimen/default_margin_and_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="@dimen/default_margin_and_padding"
        android:paddingEnd="@dimen/default_margin_and_padding">
        <TextView
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/feature_flag_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="?attr/fontBold"/>
        <ImageView
            android:id="@+id/feature_flag_header_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/feature_flag_client_config"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info"
            android:scaleType="fitEnd"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
