<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.KmtTheme.Dark"
    android:orientation="vertical"
    android:background="@color/canvas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/offer_feed_card_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/offer_feed_card_content"
            android:padding="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.Headline1"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/offer_feed_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minLines="2"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.TextSmall.Bold"
                android:id="@+id/offer_feed_card_banner"
                android:background="@drawable/bg_feedback_rounded_4dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_and_padding"
                android:text="@string/premium_buy_sales_campaign_sale"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>
            <ImageView
                android:id="@+id/offer_feed_card_image"
                android:layout_width="244dp"
                android:layout_height="134dp"
                android:layout_margin="12dp"
                android:scaleType="fitCenter"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp">
                    <TextView
                        android:textAppearance="@style/TextAppearance.Komoot.Headline2"
                        android:textColor="@color/white"
                        android:id="@+id/offer_feed_card_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        app:autoSizeTextType="uniform"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.Komoot.TextLarge"
                        android:textColor="@color/white"
                        android:id="@+id/offer_feed_card_original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        app:autoSizeTextType="uniform"/>
                </LinearLayout>
                <Button
                    android:textAppearance="@style/TextAppearance.Komoot.Headline5"
                    android:id="@+id/offer_feed_card_cta"
                    android:background="@drawable/btn_round_corners_6dp_primary_on_dark_states"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/offer_feed_card_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/white"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.Headline3"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_and_padding"
                android:text="@string/offer_feed_card_loading"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/border"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>
</LinearLayout>
