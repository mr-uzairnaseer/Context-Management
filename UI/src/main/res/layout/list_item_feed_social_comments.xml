<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/comments_container"
        android:background="@drawable/bg_green_grey_light_states"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_and_padding"
        android:layout_marginStart="@dimen/default_margin_and_padding">
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/secondary"
            android:gravity="center_vertical"
            android:id="@+id/comments_more"
            android:background="@drawable/bg_green_grey_light_states"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="30dp"
            android:layout_below="@+id/comment"
            android:textAllCaps="true"
            android:fontFamily="?attr/fontRegular"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="48dp"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/add_comment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/default_margin_and_padding"
        android:layout_marginStart="@dimen/default_margin_and_padding">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/add_comment_avatar"
            android:layout_width="@dimen/avatar_24"
            android:layout_height="@dimen/avatar_24"
            android:layout_marginEnd="32dp"
            app:riv_oval="true"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_underline"
            android:gravity="center_vertical"
            android:id="@+id/add_comment"
            android:background="@drawable/bg_user_profile_feed_comment"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:text="@string/tour_comment_write_hint"
            android:layout_weight="1"
            android:fontFamily="?attr/fontRegular"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_whisper"
            android:gravity="center"
            android:id="@+id/add_mention"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/mention_symbol"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="-16dp"/>
    </LinearLayout>
</merge>
