<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/feed_tour_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/inc_tour_images"/>
    <LinearLayout
        android:paddingTop="@dimen/default_margin_and_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/sport"
            android:layout_width="@dimen/avatar_24"
            android:layout_height="@dimen/avatar_24"
            app:riv_oval="true"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/tour_title"
            android:paddingBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_weight="1"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp"
            style="@style/TextAppearance.Komoot.Theme2.Heading04Medium"/>
        <ImageView
            android:id="@+id/tour_visibility_icon"
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_lock"
            app:tint="@color/text_secondary"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tour_description_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="@dimen/default_margin_and_padding">
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/black"
            android:ellipsize="end"
            android:id="@+id/tour_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:lineSpacingExtra="2dp"
            android:fontFamily="?attr/fontRegular"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/secondary"
            android:id="@+id/tour_description_show_more"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/feed_show_more"/>
    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="@dimen/default_margin_and_padding"
        layout="@layout/layout_generic_tour_stats"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/cta_container"
        android:background="@drawable/bg_muted_rounded_8dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_and_padding"
        android:layout_marginHorizontal="@dimen/default_margin_and_padding"
        android:paddingHorizontal="@dimen/default_margin_and_padding"
        android:paddingVertical="12dp">
        <ImageView
            android:id="@+id/cta_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
        <TextView
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="@color/text"
            android:id="@+id/cta_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="?attr/fontRegular"/>
    </LinearLayout>
    <View
        android:id="@+id/social_top_divider"
        android:background="@drawable/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/default_margin_and_padding"/>
</LinearLayout>
