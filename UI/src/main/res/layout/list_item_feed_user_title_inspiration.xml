<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/top_container"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/default_margin_and_padding"
    android:paddingEnd="0dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:id="@+id/reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_and_padding"
            android:layout_weight="1"
            android:fontFamily="?attr/fontRegular"/>
        <ImageButton
            android:id="@+id/top_menu"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_and_padding"
            android:src="0x7f080f91"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageview_user"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="@dimen/avatar_36"
            android:layout_height="@dimen/avatar_36"
            android:scaleType="centerInside"
            app:riv_oval="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="8dp">
            <de.komoot.android.widget.UsernameTextView
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:id="@+id/textview_user_feed_title"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="?attr/fontRegular"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/KmtTextAppearance.UserProfile.Time"/>
                <TextView
                    android:id="@+id/textview_region_separator"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    style="@style/KmtTextAppearance.UserProfile.Time"/>
                <TextView
                    android:ellipsize="end"
                    android:id="@+id/textview_region"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="1"
                    style="@style/KmtTextAppearance.UserProfile.Time"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/user_button"
            android:background="@drawable/btn_white_c8_grey_border_ripple"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/user_info_action_follow_user"
            android:textAllCaps="false"
            android:fontFamily="?attr/fontBold"
            android:layout_marginEnd="16dp"
            android:elevation="0dp"
            android:outlineProvider="none"
            app:elevation="0dp"/>
    </LinearLayout>
</LinearLayout>
