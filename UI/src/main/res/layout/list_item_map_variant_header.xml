<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sport_specific_map_upsell_title"
            android:layout_weight="1"
            android:fontFamily="?attr/fontBold"
            android:layout_marginStart="@dimen/default_margin_and_padding"/>
        <ImageView
            android:layout_gravity="bottom"
            android:id="@+id/premium_ssm_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/logo_premium_short_small"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ssm_hook_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:id="@+id/premium_ssm_hook_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/premium_hook_sport_specific_maps"
            android:fontFamily="?attr/fontRegular"
            android:paddingStart="@dimen/default_margin_and_padding"
            android:paddingEnd="@dimen/default_margin_and_padding"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:gravity="center_vertical"
            android:id="@+id/premium_ssm_hook_btn"
            android:background="@drawable/bg_transparent_with_pressable_text_states"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:text="@string/premium_hook_learn_more_btn"
            android:layout_below="@+id/premium_ssm_hook_text"
            android:textAllCaps="true"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:elevation="0dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:src="@drawable/logo_premium_short_small"
            android:layout_alignBottom="@+id/premium_ssm_hook_btn"
            android:layout_marginEnd="@dimen/default_margin_and_padding"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
