<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/layout_root"
    android:background="@drawable/list_item_large_background_states"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="158dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="72dp"
        android:layout_height="match_parent">
        <de.komoot.android.view.AutoFitTextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/textview_number"
            android:background="@drawable/bg_circle_black"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:maxLines="1"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_marginStart="@dimen/default_margin_and_padding"/>
        <de.komoot.android.view.DividerView
            android:layout_gravity="start"
            android:id="@+id/view_dottedline"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layerType="software"
            android:layout_marginStart="28dp"
            app:dashColor="#ff8a8a8a"
            app:dashGap="10dp"
            app:dashLength="2dp"
            app:dashThickness="2dp"
            app:orientation="vertical"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="?attr/fontBold"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
        <include
            android:id="@+id/layout_stats_includer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_marginEnd="@dimen/default_margin_and_padding"
            layout="@layout/layout_generic_tour_stats"/>
        <TextView
            android:textSize="13sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/difficulty_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:fontFamily="?attr/fontBold"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/layout_find_accommodation"
            android:background="@drawable/bg_white_blue_ripple_states"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="11dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_finish_flag"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/secondary"
                android:id="@+id/textview_find_accommodation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/multiday_stage_find_accommodation"
                android:fontFamily="?attr/fontRegular"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/layout_poi"
            android:background="@drawable/bg_white_blue_ripple_states"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:minHeight="30dp">
            <ImageView
                android:id="@+id/imageview_poi"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/main_grey"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:id="@+id/textview_poi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:fontFamily="?attr/fontBold"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
