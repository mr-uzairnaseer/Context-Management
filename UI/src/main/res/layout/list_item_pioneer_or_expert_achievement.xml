<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/poeali_badge_container_fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:id="@+id/poeali_xy_for_sport_ttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/poeali_badge_container_fl"
        android:layout_centerHorizontal="true"
        android:fontFamily="?attr/fontBold"/>
    <TextView
        android:textSize="28sp"
        android:gravity="center_horizontal"
        android:id="@+id/poeali_region_name_ttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="44dp"
        android:layout_below="@+id/poeali_xy_for_sport_ttv"
        android:layout_centerHorizontal="true"
        android:fontFamily="?attr/fontBold"/>
</RelativeLayout>
