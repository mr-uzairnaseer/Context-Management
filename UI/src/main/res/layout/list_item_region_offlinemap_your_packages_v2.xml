<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/layout_list_item_region_offlinemap"
    android:background="@drawable/bg_hero_green_states"
    android:layout_width="match_parent"
    android:layout_height="56dp">
    <ImageView
        android:id="@+id/imageview_icon"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_offline_pin"
        android:scaleType="centerInside"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        app:tint="@color/white"/>
    <ProgressBar
        android:id="@+id/progressbar_downloading"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:indeterminate="true"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:indeterminateTint="@color/white"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/textview_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:lines="2"
        android:fontFamily="?attr/fontBold"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="@dimen/default_margin_and_padding"
        android:layout_toStartOf="@+id/textview_update"
        android:layout_alignParentStart="true"
        app:autoSizeMaxTextSize="16sp"
        app:autoSizeTextType="uniform"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/textview_update"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:singleLine="true"
        android:fontFamily="?attr/fontBold"
        android:layout_marginEnd="@dimen/default_margin_and_padding"
        android:layout_alignParentEnd="true"/>
    <View
        android:id="@+id/roypli_divier_v"
        android:background="@color/light_white"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textview_name"/>
</RelativeLayout>
