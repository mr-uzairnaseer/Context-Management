<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusable="false"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/list_item_background_states"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/safety_contacts_empty_message"
        android:lineSpacingExtra="4sp"
        android:fontFamily="?attr/fontRegular"/>
    <Button
        android:textSize="16sp"
        android:textColor="@color/secondary"
        android:id="@+id/button"
        android:background="@drawable/bg_transparent_with_pressable_text_states"
        android:padding="@dimen/default_margin_and_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/safety_contacts_empty_cta"
        android:textAllCaps="true"
        android:fontFamily="?attr/fontRegular"/>
</LinearLayout>
