<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/bg_pressable_text_states"
    android:addStatesFromChildren="true"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/mItemSportIconIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_marginEnd="32dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/mItemNameTTV"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:maxLines="2"
        android:layout_weight="1"
        android:fontFamily="?attr/fontRegular"/>
    <CheckBox
        android:id="@+id/mItemSelectedTCB"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:checked="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/default_margin_and_padding"/>
</LinearLayout>
