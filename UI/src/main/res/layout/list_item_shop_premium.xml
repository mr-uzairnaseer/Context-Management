<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:outlineProvider="bounds"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/corner_radius_medium">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/default_margin_and_padding"
        android:clipToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/logo"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:src="@drawable/logo_premium"
            android:layout_marginStart="@dimen/default_margin_and_padding"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
        <TextView
            android:textSize="24sp"
            android:textColor="@color/black"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:text="@string/premium_buy_title"
            android:fontFamily="?attr/fontBold"
            android:layout_marginStart="@dimen/default_margin_and_padding"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/shop_premium_text"
            android:fontFamily="?attr/fontRegular"
            android:layout_marginStart="@dimen/default_margin_and_padding"
            android:layout_marginEnd="@dimen/default_margin_and_padding"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/feature_1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_marginStart="@dimen/default_margin_and_padding"
            android:layout_marginEnd="@dimen/default_margin_and_padding">
            <ImageView
                android:id="@+id/feature_image_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="0x7f08117d"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.Headline5"
                android:id="@+id/feature_title_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/premium_owns_expires_ssm_title"
                android:maxLines="1"
                android:layout_marginStart="@dimen/default_margin_and_padding"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/feature_text_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/feature_image_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.TextSmall"
                android:id="@+id/feature_text_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/premium_owns_expires_ssm_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/feature_title_1"
                app:layout_constraintTop_toBottomOf="@+id/feature_title_1"
                app:layout_constraintVertical_chainStyle="spread"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/feature_2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_marginStart="@dimen/default_margin_and_padding"
            android:layout_marginEnd="@dimen/default_margin_and_padding">
            <ImageView
                android:id="@+id/feature_image_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.Headline5"
                android:id="@+id/feature_title_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginStart="@dimen/default_margin_and_padding"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/feature_text_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/feature_image_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.TextSmall"
                android:id="@+id/feature_text_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/feature_title_2"
                app:layout_constraintTop_toBottomOf="@+id/feature_title_2"
                app:layout_constraintVertical_chainStyle="spread"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/feature_3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_and_padding"
            android:layout_marginStart="@dimen/default_margin_and_padding"
            android:layout_marginEnd="@dimen/default_margin_and_padding">
            <ImageView
                android:id="@+id/feature_image_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="0x7f0810c3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.Headline5"
                android:id="@+id/feature_title_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/premium_owns_expires_live_tracking_title"
                android:maxLines="1"
                android:layout_marginStart="@dimen/default_margin_and_padding"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/feature_text_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/feature_image_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.TextSmall"
                android:id="@+id/feature_text_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/premium_owns_expires_live_tracking_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/feature_title_3"
                app:layout_constraintTop_toBottomOf="@+id/feature_title_3"
                app:layout_constraintVertical_chainStyle="spread"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <include layout="@layout/inc_premium_short_feature_list"/>
        <ViewStub
            android:id="@+id/price_comms"
            android:layout="@layout/inc_premium_buy_btn_with_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/premium_footer_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="0x7f080655"
            android:scaleType="centerCrop"
            app:riv_corner_radius_bottom_left="8dp"
            app:riv_corner_radius_bottom_right="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
