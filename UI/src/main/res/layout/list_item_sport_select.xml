<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/layout_sport_select_item"
    android:background="@color/canvas"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sport_crosscountry_24"
        android:scaleType="centerInside"
        android:tint="@color/background_item_sport_select"
        android:layout_marginStart="@dimen/default_margin_and_padding"/>
    <TextView
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:id="@+id/textview_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:fontFamily="?attr/fontRegular"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="6dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/img_list_item_mark"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        android:layout_marginEnd="@dimen/default_margin_and_padding"
        app:tint="@color/primary"/>
</LinearLayout>
