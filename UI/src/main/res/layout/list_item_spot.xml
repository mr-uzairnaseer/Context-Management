<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_spot_item"
    android:background="@drawable/list_item_background_states"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_spot_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/default_margin_and_padding"
        android:src="@drawable/ic_c188"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/default_margin_and_padding"
        android:layout_alignParentStart="true"
        app:tint="@color/main_grey"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/sli_text_container_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin_and_padding"
        android:layout_alignTop="@+id/imageview_spot_icon"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="@dimen/default_margin_and_padding"
        android:layout_toEndOf="@+id/imageview_spot_icon">
        <de.komoot.android.view.AutoFitTextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/textview_list_item_label"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="6dp"
            android:maxLines="1"
            android:fontFamily="?attr/fontRegular"/>
        <de.komoot.android.view.AutoFitTextView
            android:textSize="15sp"
            android:textColor="@color/text_underline"
            android:id="@+id/textview_list_item_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:maxLines="1"
            android:fontFamily="?attr/fontLight"/>
        <de.komoot.android.view.AutoFitTextView
            android:textSize="13sp"
            android:textColor="@color/text_underline"
            android:id="@+id/textview_list_item_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:fontFamily="?attr/fontLight"/>
    </LinearLayout>
    <View
        android:background="@color/divider"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/sli_text_container_ll"
        android:layout_alignStart="@+id/sli_text_container_ll"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
