<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp">
    <LinearLayout
        android:orientation="vertical"
        android:background="#f5f4e9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="32sp"
            android:textColor="@android:color/black"
            android:id="@+id/survey_banner_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Call for explorers"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false">
                <ImageView
                    android:id="@+id/survey_banner_image"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/app_name"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:background="#2e5a37"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-12dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">
                    <TextView
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:id="@+id/survey_banner_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Help us shape your journey!"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/survey_banner_cta_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="We truly value your input: take a quick 2-minute survey and share your ideas on komoot."
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/survey_banner_cta"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_arrow_right"
                            android:contentDescription="@string/app_name"
                            android:layout_marginStart="16dp"
                            app:tint="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
