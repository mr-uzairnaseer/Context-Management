<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_list_item_toursave_voting_done"
    android:paddingLeft="8dp"
    android:paddingRight="32dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="32dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_inner"
        android:layout_width="@dimen/tsha_highlight_size_width"
        android:layout_height="@dimen/tsha_highlight_size_height">
        <TextView
            android:textSize="24sp"
            android:textColor="@color/text_green_grey"
            android:gravity="center_horizontal"
            android:id="@+id/textView2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tshli_voting_done_title"
            android:fontFamily="?attr/fontRegular"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_green_grey"
            android:gravity="center_horizontal"
            android:id="@+id/textView3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/tshli_voting_done_subtitle"
            android:fontFamily="?attr/fontRegular"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/textbutton_create_uhl"
            android:background="@drawable/btn_primary"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="@dimen/default_margin_and_padding"
            android:text="@string/tsha_button_create_highlight"
            android:textAllCaps="true"
            android:fontFamily="?attr/fontRegular"
            android:paddingStart="@dimen/default_margin_and_padding"
            android:paddingEnd="@dimen/default_margin_and_padding"
            android:elevation="3dp"/>
    </LinearLayout>
</FrameLayout>
