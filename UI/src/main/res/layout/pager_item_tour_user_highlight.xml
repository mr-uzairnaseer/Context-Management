<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_pager_item_user_highlight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:id="@+id/highlight_image_iv"
                        android:layout_width="146dp"
                        android:layout_height="120dp"
                        android:src="@drawable/placeholder_highlight"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="end|top"
                    android:id="@+id/highlight_sport_icon_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="8dp"/>
            </FrameLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.Komoot.Theme2.Label03Medium"
                android:ellipsize="end"
                android:id="@+id/textview_title"
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:maxLines="1"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
