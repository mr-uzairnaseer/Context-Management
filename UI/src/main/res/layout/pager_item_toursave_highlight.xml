<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/layout_list_item_toursave_highlight"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:id="@+id/card_view"
        android:layout_width="@dimen/tsha_highlight_size_width"
        android:layout_height="@dimen/tsha_highlight_size_height"
        android:layout_margin="3dp"
        android:elevation="3dp"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
                <ImageView
                    android:id="@+id/tshli_photo_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder_highlight_nopicture_svg"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/imageview_big_thump"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="16dp"
                    android:src="0x7f08119c"
                    android:scaleType="fitCenter"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
                <TextView
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:id="@+id/tshli_highlight_name_tv"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:fontFamily="?attr/fontRegular"
                    android:paddingStart="@dimen/default_margin_and_padding"
                    android:paddingEnd="@dimen/default_margin_and_padding"/>
                <ImageView
                    android:id="@+id/divider1"
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:id="@+id/layout_contribute_photos"
                    android:background="@drawable/bg_dark_green_states"
                    android:paddingLeft="@dimen/default_margin_and_padding"
                    android:paddingRight="@dimen/default_margin_and_padding"
                    android:focusable="true"
                    android:visibility="visible"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:id="@+id/frame_icon"
                        android:background="@color/white"
                        android:padding="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:id="@+id/imageview_icon_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                        <TextView
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:id="@+id/textview_icon_number"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:fontFamily="?attr/fontBold"/>
                    </FrameLayout>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:id="@+id/textview_more_photos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="3"
                        android:layout_alignParentTop="true"
                        android:textAllCaps="true"
                        android:fontFamily="?attr/fontRegular"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/frame_icon"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/layout_rating"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/tshli_upvote_ll"
                        android:background="@drawable/btn_white_with_positive_ripple"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33">
                        <ImageView
                            android:id="@+id/tshli_upvote_icon_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/tsha_hl_thumb_up_states"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/btn_text_colors_black_with_white_effect"
                            android:gravity="center"
                            android:id="@+id/tshli_upvote_text_ttv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/tshli_like_button"
                            android:textAllCaps="true"
                            android:fontFamily="?attr/fontRegular"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/divider2"
                        android:background="@color/divider"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/tshli_dont_know_ll"
                        android:background="@drawable/bg_white_shape_with_grey_effect_states"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33">
                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/tsha_hl_dont_know_states"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/btn_text_colors_black_with_white_effect"
                            android:gravity="center"
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/tshli_dont_know_button"
                            android:textAllCaps="true"
                            android:fontFamily="?attr/fontRegular"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/divider3"
                        android:background="@color/divider"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/tshli_downvote_ll"
                        android:background="@drawable/btn_white_with_negative_ripple"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33">
                        <ImageView
                            android:id="@+id/tshli_downvote_icon_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/tsha_hl_thumb_down_states"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/btn_text_colors_black_with_white_effect"
                            android:gravity="center"
                            android:id="@+id/tshli_downvote_text_ttv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/tshli_dislike_button"
                            android:textAllCaps="true"
                            android:fontFamily="?attr/fontRegular"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
