<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/layout_pager_item_user_to_follow"
    android:layout_width="wrap_content"
    android:layout_height="220dp">
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:id="@+id/card_view"
        android:padding="8dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="152dp"
        android:layout_height="188dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:elevation="2dp"
        app:cardCornerRadius="@dimen/corner_rounding_default">
        <RelativeLayout
            android:background="@drawable/bg_white_with_grey400_effect_states"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iamgeview_user"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="24dp"
                android:scaleType="fitCenter"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:riv_oval="true"/>
            <de.komoot.android.widget.UsernameTextView
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:gravity="center_horizontal"
                android:id="@+id/textview_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:layout_below="@+id/iamgeview_user"
                android:fontFamily="?attr/fontBold"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/secondary"
                android:gravity="center"
                android:id="@+id/textview_action_follow"
                android:background="@drawable/btn_white_bg_grey_effect_states"
                android:layout_width="144dp"
                android:layout_height="36dp"
                android:layout_margin="8dp"
                android:text="@string/user_info_feed_action_follow"
                android:layout_alignParentBottom="true"
                android:textAllCaps="true"
                android:fontFamily="?attr/fontBold"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
