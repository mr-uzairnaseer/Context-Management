<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_white_with_grey_effect_states"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/view_secret_link_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tour_visibility_link_toggle_title"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_link_black"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/secondary"
        android:id="@+id/view_secret_link_copy"
        android:paddingTop="16dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/general_copy_link"
        android:textAllCaps="true"/>
</LinearLayout>
