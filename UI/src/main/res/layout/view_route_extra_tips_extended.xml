<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/layout_extra_tips_title"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/route_information_tips"
        android:paddingStart="@dimen/std_border_left"
        android:paddingEnd="@dimen/std_border_left"
        style="@style/TextAppearance.Komoot.Headline4"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_extra_tips_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <Button
        android:gravity="start|center_vertical"
        android:id="@+id/layout_extra_tips_show_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BorderlessLightButton"/>
</LinearLayout>
